{% extends "layout_main.jinja" %}

{% block title %}Manage Servers - Fleet View - {{ settings.CAPTION }}{% endblock %}

{% block content %}
<div class="container-page py-8 max-w-4xl mx-auto">
  
  {# Breadcrumb Navigation #}
  <nav class="flex mb-6 text-sm" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-2">
      <li>
        <a href="/fleet/" class="text-text-secondary hover:text-primary-400 transition-colors">
          Fleet View
        </a>
      </li>
      <li>
        <svg class="w-4 h-4 text-text-secondary" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
        </svg>
      </li>
      <li>
        <span class="text-text-primary font-medium">Manage Servers</span>
      </li>
    </ol>
  </nav>

  {# Page Header #}
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-text-primary mb-2 flex items-center">
      <svg class="w-8 h-8 mr-3 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
      Manage Servers
    </h1>
    <p class="text-text-secondary">Remove servers from your fleet</p>
  </div>

  {% if servers %}
    <div class="card">
      <div class="card-body">
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-border-subtle">
                <th class="text-left py-3 px-4 text-sm font-semibold text-text-primary">Server Name</th>
                <th class="text-left py-3 px-4 text-sm font-semibold text-text-primary">Connection</th>
                <th class="text-left py-3 px-4 text-sm font-semibold text-text-primary">Status</th>
                <th class="text-left py-3 px-4 text-sm font-semibold text-text-primary">Added</th>
                <th class="text-left py-3 px-4 text-sm font-semibold text-text-primary">Last Checked</th>
                <th class="text-right py-3 px-4 text-sm font-semibold text-text-primary">Actions</th>
              </tr>
            </thead>
            <tbody>
              {% for server in servers %}
                <tr class="border-b border-border-subtle hover:bg-bg-elevated-2 transition-colors">
                  <td class="py-3 px-4">
                    <div class="font-semibold text-text-primary">{{ server.name }}</div>
                  </td>
                  <td class="py-3 px-4">
                    <code class="text-sm text-text-secondary font-mono">{{ server.username }}@{{ server.ip }}:{{ server.port }}</code>
                  </td>
                  <td class="py-3 px-4">
                    <span class="badge {% if server.status == 'online' %}badge-success{% elif server.status == 'offline' %}badge-secondary{% elif server.status == 'error' %}badge-danger{% else %}badge-info{% endif %}">
                      {{ server.status|title }}
                    </span>
                  </td>
                  <td class="py-3 px-4 text-sm text-text-secondary">
                    {{ server.added_at[:10] if server.added_at else 'N/A' }}
                  </td>
                  <td class="py-3 px-4 text-sm text-text-secondary">
                    {{ server.last_checked[:19] if server.last_checked else 'Never' }}
                  </td>
                  <td class="py-3 px-4 text-right">
                    <button
                      onclick="confirmRemove('{{ server.id }}', '{{ server.name }}')"
                      class="btn-danger btn-sm inline-flex items-center"
                    >
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                      Remove
                    </button>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {# Confirmation Modal #}
    <div id="confirmModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
      <div class="bg-bg-elevated rounded-lg shadow-xl max-w-md w-full p-6">
        <div class="flex items-start mb-4">
          <div class="flex-shrink-0 w-12 h-12 rounded-full bg-danger-500/10 flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-danger-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-text-primary mb-2">Remove Server</h3>
            <p class="text-text-secondary text-sm">
              Are you sure you want to remove <strong id="serverName" class="text-text-primary"></strong>? 
              This action cannot be undone.
            </p>
          </div>
        </div>
        
        <div class="flex gap-3 justify-end">
          <button onclick="closeModal()" class="btn-secondary">
            Cancel
          </button>
          <form id="removeForm" method="post" action="" class="inline" onsubmit="return validateRemoveForm()" hx-boost="false">
            <button type="submit" class="btn-danger">
              Remove Server
            </button>
          </form>
        </div>
      </div>
    </div>

  {% else %}
    {# Empty State #}
    <div class="card">
      <div class="card-body text-center py-16">
        <svg class="w-24 h-24 mx-auto mb-6 text-purple-400/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
        </svg>
        <h3 class="text-xl font-semibold text-text-primary mb-2">No Servers Configured</h3>
        <p class="text-text-secondary mb-6">
          You don't have any servers to manage yet.
        </p>
        <a href="/fleet/servers/add" class="btn-primary inline-flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add Server
        </a>
      </div>
    </div>
  {% endif %}

  {# Back Button #}
  <div class="mt-6">
    <a href="/fleet/" class="btn-secondary inline-flex items-center">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Fleet View
    </a>
  </div>

</div>

<script>
function confirmRemove(serverId, serverName) {
  const modal = document.getElementById('confirmModal');
  const form = document.getElementById('removeForm');
  const nameSpan = document.getElementById('serverName');
  
  nameSpan.textContent = serverName;
  form.action = `/fleet/servers/${serverId}/remove`;
  console.log('Form action set to:', form.action);
  modal.classList.remove('hidden');
}

function validateRemoveForm() {
  const form = document.getElementById('removeForm');
  console.log('Validating form with action:', form.action);
  
  // Check if action includes a server ID (should have format /fleet/servers/{id}/remove)
  const actionParts = form.action.split('/');
  const hasServerId = actionParts.length >= 5 && actionParts[actionParts.length - 2] !== 'servers';
  
  if (!hasServerId) {
    alert('Error: Server ID is missing. Please select a server and try again.');
    closeModal();
    return false;
  }
  return true;
}

function closeModal() {
  const modal = document.getElementById('confirmModal');
  modal.classList.add('hidden');
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeModal();
  }
});

// Close modal on background click
document.getElementById('confirmModal')?.addEventListener('click', function(e) {
  if (e.target === this) {
    closeModal();
  }
});
</script>
{% endblock %}
