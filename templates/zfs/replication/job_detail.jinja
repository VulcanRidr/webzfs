{% extends "layout_main.jinja" %}

{% block content %}
<div class="container-page max-w-6xl">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li><a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li><a href="/zfs/replication" class="text-primary-400 hover:text-primary-300 transition-colors">Replication</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">{{ job.name }}</li>
        </ol>
    </nav>

    <!-- Page Header with Actions -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-text-primary mb-2">{{ job.name }}</h1>
            <p class="text-text-secondary">Scheduled replication job details and execution history</p>
        </div>
        <div class="flex gap-2">
            {% if job.enabled %}
            <form method="post" action="/zfs/replication/jobs/{{ job.id }}/disable" class="inline">
                <button type="submit" class="btn-warning">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Disable
                </button>
            </form>
            {% else %}
            <form method="post" action="/zfs/replication/jobs/{{ job.id }}/enable" class="inline">
                <button type="submit" class="btn-success">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Enable
                </button>
            </form>
            {% endif %}
            <a href="/zfs/replication/jobs/{{ job.id }}/delete/confirm" class="btn-danger">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete
            </a>
        </div>
    </div>

    <!-- Success Message -->
    {% if request.query_params.get('message') %}
        <div id="success-message" class="bg-success-900/30 border border-success-700 text-success-400 px-4 py-3 rounded-lg mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            <span>{{ request.query_params.get('message') }}</span>
        </div>
    {% endif %}

    <!-- Job Configuration -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                Job Configuration
            </h2>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="border-l-2 border-primary-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Source Dataset</dt>
                    <dd class="font-mono text-sm text-primary-400">{{ job.source_dataset }}</dd>
                </div>
                <div class="border-l-2 border-success-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Target Dataset</dt>
                    <dd class="font-mono text-sm text-success-400">{{ job.target_dataset }}</dd>
                </div>
                <div class="border-l-2 border-info-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Replication Type</dt>
                    <dd class="text-text-primary font-medium">{{ job.replication_type }}</dd>
                </div>
                <div class="border-l-2 border-warning-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Schedule</dt>
                    <dd class="font-mono text-sm text-warning-400">{{ job.schedule }}</dd>
                </div>
                <div class="border-l-2 border-purple-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Compression</dt>
                    <dd class="text-text-primary font-medium">{{ job.compression }}</dd>
                </div>
                <div class="border-l-2 border-info-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Recursive</dt>
                    <dd class="text-text-primary font-medium">{% if job.recursive %}Yes{% else %}No{% endif %}</dd>
                </div>
                <div class="border-l-2 border-success-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Status</dt>
                    <dd>
                        {% if job.enabled %}
                        <span class="badge-success">Enabled</span>
                        {% else %}
                        <span class="px-2.5 py-1 rounded-full text-xs font-semibold bg-bg-elevated-3 text-text-secondary border border-border-default">Disabled</span>
                        {% endif %}
                    </dd>
                </div>
                <div class="border-l-2 border-text-tertiary pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Created</dt>
                    <dd class="text-sm text-text-primary">{{ job.created_at }}</dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Job Status -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Job Status
            </h2>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="border-l-2 border-warning-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Last Run</dt>
                    <dd class="text-text-primary font-medium">{{ status.last_run if status.last_run else 'Never' }}</dd>
                </div>
                <div class="border-l-2 border-info-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Last Status</dt>
                    <dd class="text-text-primary font-medium">{{ status.last_status if status.last_status else 'N/A' }}</dd>
                </div>
                <div class="border-l-2 border-success-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Next Run</dt>
                    <dd class="text-text-primary font-medium">{{ status.next_run }}</dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Execution History -->
    {% if history %}
    <div class="card">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Execution History
            </h2>
        </div>
        <div class="p-6">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-border-subtle">
                    <thead>
                        <tr class="bg-bg-elevated-2">
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Started</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Duration</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Details</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-subtle">
                        {% for entry in history %}
                        <tr class="hover:bg-bg-elevated-2 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">{{ entry.started_at }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">{{ "%.2f"|format(entry.duration_seconds) }}s</td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if entry.status == 'success' %}
                                <span class="badge-success">Success</span>
                                {% else %}
                                <span class="badge-danger">Failed</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm">
                                {% if entry.error %}
                                <span class="text-danger-400">{{ entry.error }}</span>
                                {% else %}
                                <span class="text-text-secondary">{{ entry.bytes_transferred if entry.bytes_transferred else 'N/A' }}</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
