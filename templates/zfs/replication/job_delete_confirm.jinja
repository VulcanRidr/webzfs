{% extends "layout_main.jinja" %}

{% block content %}
<div class="container-page max-w-4xl">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li><a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li><a href="/zfs/replication" class="text-primary-400 hover:text-primary-300 transition-colors">Replication</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">Delete Job</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-danger-400 mb-2 flex items-center">
            <svg class="w-8 h-8 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            Delete Replication Job
        </h1>
        <p class="text-text-secondary">Permanently remove this scheduled replication job</p>
    </div>

    <!-- Warning Message -->
    <div class="bg-danger-900/30 border-2 border-danger-700 text-danger-400 px-6 py-4 rounded-lg mb-6 flex items-start">
        <svg class="w-6 h-6 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
        </svg>
        <div>
            <strong class="font-semibold text-lg">Warning!</strong>
            <p class="mt-1">You are about to delete the replication job "<span class="font-semibold">{{ job.name }}</span>". This action cannot be undone.</p>
        </div>
    </div>

    <!-- Job Details -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Job Details
            </h2>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="border-l-2 border-primary-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Name</dt>
                    <dd class="text-text-primary font-medium">{{ job.name }}</dd>
                </div>
                <div class="border-l-2 border-warning-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Schedule</dt>
                    <dd class="font-mono text-sm text-warning-400">{{ job.schedule }}</dd>
                </div>
                <div class="border-l-2 border-primary-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Source Dataset</dt>
                    <dd class="font-mono text-sm text-primary-400">{{ job.source_dataset }}</dd>
                </div>
                <div class="border-l-2 border-success-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Target Dataset</dt>
                    <dd class="font-mono text-sm text-success-400">{{ job.target_dataset }}</dd>
                </div>
            </dl>
        </div>
    </div>

    <!-- Confirmation Form -->
    <div class="card">
        <div class="card-body">
            <form method="post" action="/zfs/replication/jobs/{{ job.id }}/delete">
                <div class="mb-6">
                    <div class="card-nested bg-info-900/20 border-info-700 mb-4">
                        <h3 class="font-semibold mb-2 text-text-primary flex items-center">
                            <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            Important Note
                        </h3>
                        <p class="text-sm text-text-secondary">
                            Deleting this job will only remove the scheduled replication configuration. 
                            It will not affect any existing snapshots or datasets.
                        </p>
                    </div>
                    <p class="text-text-primary font-medium">
                        Are you sure you want to delete this replication job?
                    </p>
                </div>

                <div class="flex items-center justify-between pt-4 border-t border-border-subtle">
                    <button type="submit" class="btn-danger font-bold">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Yes, Delete Job
                    </button>
                    <a href="/zfs/replication/jobs/{{ job.id }}/detail" class="btn-secondary">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
