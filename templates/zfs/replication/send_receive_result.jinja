{% extends "layout_main.jinja" %}

{% block content %}
<div class="container-page max-w-4xl">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li><a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li><a href="/zfs/replication" class="text-primary-400 hover:text-primary-300 transition-colors">Replication</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">Replication Result</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-text-primary mb-2">Replication Result</h1>
        <p class="text-text-secondary">Summary of the ZFS send/receive operation</p>
    </div>

    <!-- Status Message -->
    {% if result.status == 'success' %}
    <div class="bg-success-900/30 border border-success-700 text-success-400 px-4 py-3 rounded-lg mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
            <strong class="font-semibold">Success!</strong>
            <p class="text-sm mt-1">Replication completed successfully.</p>
        </div>
    </div>
    {% else %}
    <div class="bg-danger-900/30 border border-danger-700 text-danger-400 px-4 py-3 rounded-lg mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
            <strong class="font-semibold">Failed!</strong>
            <p class="text-sm mt-1">Replication failed.</p>
        </div>
    </div>
    {% endif %}

    <!-- Replication Details -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                Replication Details
            </h2>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="border-l-2 border-primary-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Source</dt>
                    <dd class="font-mono text-sm text-primary-400">{{ result.source }}</dd>
                </div>
                <div class="border-l-2 border-success-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Target</dt>
                    <dd class="font-mono text-sm text-success-400">{{ result.target }}</dd>
                </div>
                {% if result.snapshot %}
                <div class="border-l-2 border-info-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Snapshot</dt>
                    <dd class="font-mono text-sm text-info-400">{{ result.snapshot }}</dd>
                </div>
                {% endif %}
                <div class="border-l-2 border-purple-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Duration</dt>
                    <dd class="text-text-primary font-medium">{{ "%.2f"|format(result.duration_seconds) }} seconds</dd>
                </div>
                {% if result.bytes_transferred %}
                <div class="border-l-2 border-warning-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Bytes Transferred</dt>
                    <dd class="text-text-primary font-medium">{{ result.bytes_transferred }}</dd>
                </div>
                {% endif %}
                {% if result.error %}
                <div class="md:col-span-2 border-l-2 border-danger-500 pl-4">
                    <dt class="text-sm font-medium text-danger-400 mb-1 flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        Error
                    </dt>
                    <dd class="text-danger-400 font-mono text-sm bg-danger-900/20 p-3 rounded border border-danger-700">{{ result.error }}</dd>
                </div>
                {% endif %}
            </dl>
        </div>
    </div>

    <!-- Output Display (if available) -->
    {% if result.output %}
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
                Command Output
            </h2>
        </div>
        <div class="p-6">
            <pre class="bg-bg-elevated-3 p-4 rounded border border-border-default overflow-x-auto font-mono text-sm text-text-secondary">{{ result.output }}</pre>
        </div>
    </div>
    {% endif %}

    <!-- Actions -->
    <div class="flex justify-center gap-4">
        <a href="/zfs/replication" class="btn-primary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Replication
        </a>
        <a href="/zfs/replication/history" class="btn-secondary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            View History
        </a>
    </div>
</div>
{% endblock %}
