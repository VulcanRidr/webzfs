{% extends "layout_main.jinja" %}

{% block content %}
<div class="container-page max-w-4xl">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li><a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li><a href="/zfs/replication" class="text-primary-400 hover:text-primary-300 transition-colors">Replication</a></li>
            <li class="text-text-tertiary">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">Syncoid Result</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-text-primary mb-2">Syncoid Replication Result</h1>
        <p class="text-text-secondary">Execution summary and output details</p>
    </div>

    <!-- Status Message -->
    {% if result.success %}
    <div class="bg-success-900/30 border border-success-700 text-success-400 px-4 py-3 rounded-lg mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
            <strong class="font-semibold">Success!</strong>
            <p class="text-sm mt-1">Syncoid replication completed successfully.</p>
        </div>
    </div>
    {% else %}
    <div class="bg-danger-900/30 border border-danger-700 text-danger-400 px-4 py-3 rounded-lg mb-6 flex items-center">
        <svg class="w-6 h-6 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
            <strong class="font-semibold">Failed!</strong>
            <p class="text-sm mt-1">Syncoid replication failed.</p>
        </div>
    </div>
    {% endif %}

    <!-- Execution Details -->
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                </svg>
                Execution Details
            </h2>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div class="border-l-2 border-info-500 pl-4">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Return Code</dt>
                    <dd class="text-text-primary font-medium">
                        {% if result.returncode == 0 %}
                        <span class="text-success-400">{{ result.returncode }} (Success)</span>
                        {% else %}
                        <span class="text-danger-400">{{ result.returncode }} (Error)</span>
                        {% endif %}
                    </dd>
                </div>
                <div class="border-l-2 border-primary-500 pl-4 md:col-span-2">
                    <dt class="text-sm font-medium text-text-secondary mb-1">Command</dt>
                    <dd class="font-mono text-xs text-primary-400 break-all bg-bg-elevated-3 p-3 rounded border border-border-default">{{ result.command }}</dd>
                </div>
            </dl>

            {% if result.stats %}
            <div class="border-t border-border-subtle pt-6">
                <h3 class="font-semibold text-lg mb-4 text-text-primary flex items-center">
                    <svg class="w-5 h-5 mr-2 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    Transfer Statistics
                </h3>
                <dl class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {% if result.stats.bytes_sent %}
                    <div class="border-l-2 border-warning-500 pl-4">
                        <dt class="text-sm font-medium text-text-secondary mb-1">Bytes Sent</dt>
                        <dd class="text-text-primary font-medium">{{ result.stats.bytes_sent }}</dd>
                    </div>
                    {% endif %}
                    {% if result.stats.bytes_received %}
                    <div class="border-l-2 border-success-500 pl-4">
                        <dt class="text-sm font-medium text-text-secondary mb-1">Bytes Received</dt>
                        <dd class="text-text-primary font-medium">{{ result.stats.bytes_received }}</dd>
                    </div>
                    {% endif %}
                    {% if result.stats.transfer_rate %}
                    <div class="border-l-2 border-info-500 pl-4">
                        <dt class="text-sm font-medium text-text-secondary mb-1">Transfer Rate</dt>
                        <dd class="text-text-primary font-medium">{{ result.stats.transfer_rate }} bytes/sec</dd>
                    </div>
                    {% endif %}
                    {% if result.stats.snapshots_sent %}
                    <div class="border-l-2 border-purple-500 pl-4">
                        <dt class="text-sm font-medium text-text-secondary mb-1">Snapshots Sent</dt>
                        <dd class="text-text-primary font-medium">{{ result.stats.snapshots_sent }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Output -->
    {% if result.stdout %}
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                <svg class="w-5 h-5 mr-2 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                Output
            </h2>
        </div>
        <div class="p-6">
            <pre class="bg-bg-elevated-3 p-4 rounded border border-border-default overflow-x-auto font-mono text-sm text-text-secondary whitespace-pre-wrap">{{ result.stdout }}</pre>
        </div>
    </div>
    {% endif %}

    <!-- Errors/Messages -->
    {% if result.stderr %}
    <div class="card mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center">
                {% if result.success %}
                <svg class="w-5 h-5 mr-2 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Messages
                {% else %}
                <svg class="w-5 h-5 mr-2 text-danger-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Errors
                {% endif %}
            </h2>
        </div>
        <div class="p-6">
            <pre class="bg-bg-elevated-3 p-4 rounded border border-border-default overflow-x-auto font-mono text-sm {% if result.success %}text-warning-400{% else %}text-danger-400{% endif %} whitespace-pre-wrap">{{ result.stderr }}</pre>
        </div>
    </div>
    {% endif %}

    <!-- Error Details -->
    {% if result.error %}
    <div class="card-nested bg-danger-900/20 border-danger-700 mb-6">
        <h3 class="font-semibold mb-3 text-text-primary flex items-center">
            <svg class="w-5 h-5 mr-2 text-danger-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Error Details
        </h3>
        <p class="text-danger-400 font-mono text-sm bg-danger-900/30 p-3 rounded border border-danger-700">{{ result.error }}</p>
    </div>
    {% endif %}

    <!-- Actions -->
    <div class="flex justify-center gap-4">
        <a href="/zfs/replication/syncoid" class="btn-info">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Syncoid
        </a>
        <a href="/zfs/replication" class="btn-secondary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
            </svg>
            Replication Dashboard
        </a>
    </div>
</div>
{% endblock %}
