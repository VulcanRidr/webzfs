{% extends "layout.jinja" %}

{% block content %}
<div class="max-w-3xl mx-auto space-y-6">
    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center text-sm text-text-secondary">
        <a href="/zfs/pools" class="hover:text-text-primary transition-colors">Pools</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/zfs/datasets" class="hover:text-text-primary transition-colors">Datasets</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/zfs/datasets/{{ dataset_name }}" class="hover:text-text-primary transition-colors">{{ dataset_name }}</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-text-primary font-medium">Rename</span>
    </nav>

    <!-- Page Header -->
    <div>
        <h1 class="text-3xl font-bold text-text-primary">Rename Dataset</h1>
        <p class="text-text-secondary mt-1">Rename the dataset to a new name</p>
    </div>

    <!-- Error Message -->
    {% if error %}
        {% with message=error %}
            {% include "partials/error.jinja" %}
        {% endwith %}
    {% endif %}

    <!-- Rename Form -->
    <div class="card">
        <div class="card-body">
            <form method="post" action="/zfs/datasets/{{ dataset_name }}/rename" class="space-y-6">
                <!-- Current Name -->
                <div>
                    <label class="form-label">
                        Current Dataset Name
                    </label>
                    <div class="form-input bg-bg-elevated-3 text-text-secondary cursor-not-allowed">
                        {{ dataset_name }}
                    </div>
                </div>

                <!-- New Name -->
                <div>
                    <label for="new_name" class="form-label">
                        New Dataset Name <span class="text-danger-400">*</span>
                    </label>
                    <input 
                        type="text" 
                        id="new_name" 
                        name="new_name" 
                        value="{{ new_name if new_name else '' }}"
                        class="form-input"
                        placeholder="e.g., pool/newname or pool/path/newname"
                        required
                    >
                    <p class="text-text-tertiary text-sm mt-1">
                        Full path including pool name. Must be in the same pool.
                    </p>
                </div>

                <!-- Force Option -->
                <div>
                    <label class="flex items-start gap-2 text-text-primary cursor-pointer">
                        <input 
                            type="checkbox" 
                            id="force" 
                            name="force" 
                            value="true"
                            class="form-checkbox mt-1"
                        >
                        <div>
                            <span class="font-medium">Force unmount if necessary</span>
                            <p class="text-text-tertiary text-sm mt-1">
                                Unmount the dataset if it's currently mounted (use with caution)
                            </p>
                        </div>
                    </label>
                </div>

                <!-- Warning Box -->
                <div class="card-nested bg-warning-900/20 border-warning-700">
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 text-warning-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <div>
                            <h3 class="text-sm font-semibold text-warning-400 mb-2">Important Notes:</h3>
                            <ul class="list-disc list-inside space-y-1 text-sm text-text-secondary">
                                <li>Renaming changes the dataset's path and mountpoint</li>
                                <li>Child datasets are not automatically renamed</li>
                                <li>The new name must be unique within the pool</li>
                                <li>Snapshots associated with this dataset will be updated</li>
                                <li>Any active processes using the dataset should be stopped first</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-end gap-3 pt-4">
                    <a href="/zfs/datasets/{{ dataset_name }}" class="btn-secondary">
                        Cancel
                    </a>
                    <button type="submit" class="btn-primary inline-flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Rename Dataset
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Additional Information -->
    <div class="card-nested">
        <h3 class="text-sm font-semibold text-text-primary mb-3 flex items-center gap-2">
            <svg class="w-4 h-4 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Rename Examples
        </h3>
        <div class="text-sm text-text-secondary space-y-2">
            <p class="flex items-center gap-2">
                <span class="text-text-tertiary">•</span>
                <code class="bg-bg-elevated-3 text-text-primary px-2 py-1 rounded font-mono text-xs">tank/data</code>
                <svg class="w-4 h-4 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
                <code class="bg-bg-elevated-3 text-text-primary px-2 py-1 rounded font-mono text-xs">tank/mydata</code>
                <span class="text-text-tertiary">(simple rename)</span>
            </p>
            <p class="flex items-center gap-2">
                <span class="text-text-tertiary">•</span>
                <code class="bg-bg-elevated-3 text-text-primary px-2 py-1 rounded font-mono text-xs">tank/olddir/dataset</code>
                <svg class="w-4 h-4 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
                <code class="bg-bg-elevated-3 text-text-primary px-2 py-1 rounded font-mono text-xs">tank/newdir/dataset</code>
                <span class="text-text-tertiary">(move to different path)</span>
            </p>
            <p class="flex items-start gap-2 mt-3 text-warning-400">
                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <span>The dataset cannot be renamed to a different pool</span>
            </p>
        </div>
    </div>
</div>
{% endblock %}
