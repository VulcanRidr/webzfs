{% extends "layout.jinja" %}

{% block content %}
<div class="space-y-6">
    <!-- Breadcrumb -->
    <nav class="flex items-center text-sm text-text-secondary">
        <a href="/zfs/pools" class="hover:text-text-primary transition-colors">Pools</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/zfs/pools/{{ pool_name }}" class="hover:text-text-primary transition-colors">{{ pool_name }}</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-text-primary font-medium">History</span>
    </nav>

    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-3xl font-bold text-text-primary">Pool History: {{ pool_name }}</h1>
            <p class="text-text-secondary mt-1">Command history and operations log</p>
        </div>
        <div class="flex gap-2">
            <a href="/zfs/pools/{{ pool_name }}/history/download" 
               class="btn-success inline-flex items-center gap-2"
               hx-boost="false">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Download
            </a>
            <a href="/zfs/pools/{{ pool_name }}" class="btn-secondary inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Pool
            </a>
        </div>
    </div>

    <!-- History -->
    {% if history %}
    <div class="card">
        <div class="px-6 py-4 bg-bg-elevated-2 border-b border-border-subtle">
            <div class="flex items-center justify-between">
                <p class="text-text-secondary text-sm flex items-center gap-2">
                    <svg class="w-4 h-4 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                    </svg>
                    Showing <span class="font-semibold text-text-primary">{{ history|length }}</span> history entries
                </p>
            </div>
        </div>
        <div class="card-body">
            <pre class="bg-bg-elevated-2 text-text-primary p-4 rounded-lg overflow-x-auto text-xs font-mono whitespace-pre-wrap border border-border-subtle">{% for entry in history %}{{ entry.entry }}
{% endfor %}</pre>
        </div>
    </div>
    {% else %}
    <div class="card text-center py-12">
        <div class="text-text-tertiary mb-4">
            <svg class="mx-auto h-16 w-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-text-primary mb-2">No History Found</h3>
        <p class="text-text-secondary">No history entries found for this pool.</p>
    </div>
    {% endif %}

    <!-- Back Button -->
    <div>
        <a href="/zfs/pools/{{ pool_name }}" class="text-text-secondary hover:text-text-primary inline-flex items-center gap-2 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Pool Details
        </a>
    </div>
</div>
{% endblock %}
