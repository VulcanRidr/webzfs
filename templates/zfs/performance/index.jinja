{% extends "layout_main.jinja" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container-page">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-text-secondary">
            <li><a href="/" class="hover:text-text-primary transition-colors">Home</a></li>
            <li>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="text-text-primary font-medium">ZFS Performance</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="flex flex-col md:flex-row md:justify-between md:items-center gap-4 mb-6">
        <div>
            <h1 class="text-3xl font-bold text-text-primary">ZFS Performance Monitor</h1>
            <p class="text-text-secondary mt-1">Real-time monitoring of ZFS performance and resource usage</p>
        </div>
        <div class="flex items-center gap-3">
            <span class="text-sm text-text-secondary" id="last-update">Last updated: just now</span>
            <button id="refresh-toggle" 
                    class="btn-success">
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                    <span id="refresh-text">Auto-refresh: ON</span>
                </span>
            </button>
        </div>
    </div>

    {% if error %}
    <div class="bg-danger-900/30 border-2 border-danger-500/50 text-danger-400 px-4 py-3 rounded-lg mb-6">
        <div class="flex items-start gap-2">
            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div>
                <strong class="font-semibold">Error:</strong> {{ error }}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Quick Access Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
        <a href="/zfs/performance/pool-iostat" class="card hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
            <div class="card-body">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-primary-500/20 border border-primary-500/30 rounded-lg p-3">
                        <svg class="h-6 w-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-text-secondary">Pool I/O Stats</p>
                        <p class="text-lg font-semibold text-text-primary">Live Monitor</p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/zfs/performance/arc-realtime" class="card hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
            <div class="card-body">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-success-500/20 border border-success-500/30 rounded-lg p-3">
                        <svg class="h-6 w-6 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-text-secondary">ARC Real-Time</p>
                        <p class="text-lg font-semibold text-text-primary" id="arc-hit-rate-display">
                            {% if arc_stats.get('hit_rate') %}
                                {{ "%.1f"|format(arc_stats.hit_rate) }}%
                            {% else %}
                                N/A
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/zfs/performance/processes" class="card hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
            <div class="card-body">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-purple-500/20 border border-purple-500/30 rounded-lg p-3">
                        <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-text-secondary">ZFS Processes</p>
                        <p class="text-lg font-semibold text-text-primary" id="process-count">{{ all_processes|length }}</p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/zfs/performance/capacity" class="card hover:shadow-xl transition-all duration-200 hover:-translate-y-1">
            <div class="card-body">
                <div class="flex items-center">
                    <div class="flex-shrink-0 bg-warning-500/20 border border-warning-500/30 rounded-lg p-3">
                        <svg class="h-6 w-6 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
                        </svg>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-text-secondary">Pool Capacity</p>
                        <p class="text-lg font-semibold text-text-primary">
                            {% if capacity_stats.pools %}
                                {{ capacity_stats.pools|length }} pool(s)
                            {% else %}
                                N/A
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </a>
    </div>

    <!-- Pool Capacity Overview -->
    <div class="card mb-6">
        <div class="card-body border-b border-border-subtle">
            <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
                </svg>
                <h2 class="text-xl font-semibold text-text-primary">Pool Capacity Status</h2>
            </div>
        </div>
        <div class="card-body">
            {% if capacity_stats.pools %}
            <div class="space-y-2">
                {% for pool in capacity_stats.pools %}
                {% set cap_num = pool.capacity.rstrip('%') | float %}
                <div class="bg-bg-elevated-2 rounded-lg p-3
                    {% if cap_num > 90 %}
                        border-2 border-danger-500
                    {% elif cap_num >= 80 %}
                        border-2 border-warning-500
                    {% else %}
                        border border-border-subtle
                    {% endif %}">
                    <div class="flex justify-between items-center">
                        <h3 class="text-lg font-semibold text-text-primary">{{ pool.name }}</h3>
                        <span class="badge
                            {% if pool.health == 'ONLINE' %}
                                badge-success
                            {% elif pool.health == 'DEGRADED' %}
                                badge-warning
                            {% else %}
                                badge-danger
                            {% endif %}">
                            {{ pool.health }}
                        </span>
                    </div>
                    <div class="grid grid-cols-2 md:grid-cols-5 gap-x-4 gap-y-1 text-sm mt-2">
                        <div>
                            <p class="text-text-secondary">Size</p>
                            <p class="font-medium text-text-primary">{{ pool.size }}</p>
                        </div>
                        <div>
                            <p class="text-text-secondary">Allocated</p>
                            <p class="font-medium text-text-primary">{{ pool.allocated }}</p>
                        </div>
                        <div>
                            <p class="text-text-secondary">Free</p>
                            <p class="font-medium text-text-primary">{{ pool.free }}</p>
                        </div>
                        <div>
                            <p class="text-text-secondary">Fragmentation</p>
                            <p class="font-medium text-text-primary">{{ pool.fragmentation }}</p>
                        </div>
                        <div>
                            <p class="text-text-secondary">Deduplication</p>
                            <p class="font-medium text-text-primary">{{ pool.deduplication }}</p>
                        </div>
                    </div>
                    <!-- Capacity Bar with percentage label -->
                    <div class="mt-2">
                        <div class="relative mb-1">
                            <p class="text-xs text-text-secondary">Capacity</p>
                            <span class="absolute top-0 text-xs font-semibold text-text-primary" style="left: {{ pool.capacity }};">{{ pool.capacity }}</span>
                        </div>
                        <div class="relative w-full bg-bg-elevated-3 rounded-full h-6">
                            <div class="h-6 transition-all duration-300 rounded-full
                                {% if cap_num < 80 %}
                                    bg-success-500
                                {% elif cap_num <= 90 %}
                                    bg-warning-500
                                {% else %}
                                    bg-danger-500
                                {% endif %}"
                                style="width: {{ pool.capacity }}">
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-text-tertiary mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
                </svg>
                <p class="text-text-secondary">No pools available</p>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- ZFS Processes -->
    <div class="card mb-6">
        <div class="card-body border-b border-border-subtle">
            <div class="flex justify-between items-center">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                    </svg>
                    <h2 class="text-xl font-semibold text-text-primary">ZFS Processes</h2>
                    <span class="text-xs text-text-tertiary italic">(showing processes >1% CPU)</span>
                </div>
                <a href="/zfs/performance/processes" class="text-primary-400 hover:text-primary-300 text-sm font-medium transition-colors">
                    View All
                    <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </a>
            </div>
        </div>
        <div class="card-body">
            {% if processes %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-border-subtle">
                    <thead class="bg-bg-elevated-2">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">PID</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Name</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">User</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">CPU %</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Memory %</th>
                            <th class="px-4 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-border-subtle" id="processes-tbody">
                        {% for proc in processes %}
                        <tr class="hover:bg-bg-elevated-2 transition-colors">
                            <td class="px-4 py-3 text-sm text-text-primary">{{ proc.pid }}</td>
                            <td class="px-4 py-3 text-sm font-medium text-text-primary">{{ proc.name }}</td>
                            <td class="px-4 py-3 text-sm text-text-secondary">{{ proc.username }}</td>
                            <td class="px-4 py-3 text-sm text-text-primary">{{ "%.1f"|format(proc.cpu_percent) }}%</td>
                            <td class="px-4 py-3 text-sm text-text-primary">{{ "%.1f"|format(proc.memory_percent) }}%</td>
                            <td class="px-4 py-3 text-sm">
                                <span class="badge
                                    {% if proc.status == 'running' %}
                                        badge-success
                                    {% elif proc.status == 'sleeping' %}
                                        badge-info
                                    {% else %}
                                        badge-secondary
                                    {% endif %}">
                                    {{ proc.status }}
                                </span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-8">
                <svg class="mx-auto h-12 w-12 text-text-tertiary mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                </svg>
                <p class="text-text-secondary">No ZFS processes using more than 1% CPU</p>
                <p class="text-text-tertiary text-sm mt-2">
                    <a href="/zfs/performance/processes" class="text-primary-400 hover:text-primary-300">View all processes →</a>
                </p>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Additional Performance Tools -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="card">
            <div class="card-body border-b border-border-subtle">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                    <h3 class="text-lg font-semibold text-text-primary">Additional Monitoring</h3>
                </div>
            </div>
            <div class="card-body">
                <ul class="space-y-3">
                    <li>
                        <a href="/zfs/performance/vdev-stats" class="flex items-center text-primary-400 hover:text-primary-300 transition-colors group">
                            <svg class="w-4 h-4 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                            Per-VDEV Statistics
                        </a>
                    </li>
                    <li>
                        <a href="/zfs/performance/dataset-space" class="flex items-center text-primary-400 hover:text-primary-300 transition-colors group">
                            <svg class="w-4 h-4 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                            Dataset Space Usage
                        </a>
                    </li>
                    <li>
                        <a href="/zfs/performance/system-iostat" class="flex items-center text-primary-400 hover:text-primary-300 transition-colors group">
                            <svg class="w-4 h-4 mr-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                            System I/O Statistics
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="card">
            <div class="card-body border-b border-border-subtle">
                <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                    </svg>
                    <h3 class="text-lg font-semibold text-text-primary">Quick ARC Stats</h3>
                </div>
            </div>
            <div class="card-body">
                {% if arc_stats and not arc_stats.get('error') %}
                <dl class="space-y-3 text-sm">
                    {% if arc_stats.get('size') %}
                    <div class="flex justify-between items-center py-1 border-b border-border-subtle">
                        <dt class="text-text-secondary">ARC Size:</dt>
                        <dd class="font-medium text-text-primary">{{ (arc_stats.size / 1073741824) | round(2) }} GB</dd>
                    </div>
                    {% endif %}
                    {% if arc_stats.get('c_max') %}
                    <div class="flex justify-between items-center py-1 border-b border-border-subtle">
                        <dt class="text-text-secondary">ARC Max:</dt>
                        <dd class="font-medium text-text-primary">{{ (arc_stats.c_max / 1073741824) | round(2) }} GB</dd>
                    </div>
                    {% endif %}
                    {% if arc_stats.get('hit_rate') is not none %}
                    <div class="flex justify-between items-center py-1 border-b border-border-subtle">
                        <dt class="text-text-secondary">Hit Rate:</dt>
                        <dd class="font-medium {% if arc_stats.hit_rate >= 80 %}text-success-400{% elif arc_stats.hit_rate >= 60 %}text-warning-400{% else %}text-danger-400{% endif %}">
                            {{ "%.2f"|format(arc_stats.hit_rate) }}%
                        </dd>
                    </div>
                    {% endif %}
                </dl>
                <div class="mt-4">
                    <a href="/zfs/performance/arc-realtime" class="text-primary-400 hover:text-primary-300 text-sm font-medium transition-colors">
                        View Real-Time Monitor
                        <svg class="w-4 h-4 inline ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                </div>
                {% else %}
                <p class="text-text-secondary">
                    {% if arc_stats.get('error') %}
                        Error: {{ arc_stats.error }}
                    {% else %}
                        ARC statistics not available
                    {% endif %}
                </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>

<script>
    let autoRefresh = true;
    let refreshInterval;
    
    const refreshToggle = document.getElementById('refresh-toggle');
    const refreshText = document.getElementById('refresh-text');
    const lastUpdate = document.getElementById('last-update');
    
    refreshToggle.addEventListener('click', () => {
        autoRefresh = !autoRefresh;
        
        if (autoRefresh) {
            refreshToggle.className = 'btn-success';
            refreshText.textContent = 'Auto-refresh: ON';
            startRefresh();
        } else {
            refreshToggle.className = 'btn-secondary';
            refreshText.textContent = 'Auto-refresh: OFF';
            if (refreshInterval) {
                clearInterval(refreshInterval);
            }
        }
    });
    
    function updateLastRefresh() {
        const now = new Date();
        lastUpdate.textContent = `Last updated: ${now.toLocaleTimeString()}`;
    }
    
    async function refreshData() {
        try {
            // Refresh ARC stats
            const arcResponse = await fetch('/zfs/performance/api/arc-stats');
            if (arcResponse.ok) {
                const arcData = await arcResponse.json();
                if (arcData.hit_rate !== undefined) {
                    document.getElementById('arc-hit-rate-display').textContent = arcData.hit_rate.toFixed(1) + '%';
                }
            }
            
            // Refresh process count
            const procResponse = await fetch('/zfs/performance/api/processes');
            if (procResponse.ok) {
                const procData = await procResponse.json();
                const allProcesses = procData.processes;
                const activeProcesses = allProcesses.filter(p => p.cpu_percent > 1.0);
                
                // Update total count
                document.getElementById('process-count').textContent = allProcesses.length;
                
                // Update processes table with filtered list (>1% CPU)
                const tbody = document.getElementById('processes-tbody');
                if (tbody) {
                    if (activeProcesses.length > 0) {
                        tbody.innerHTML = activeProcesses.map(proc => {
                            let statusBadge = 'badge-secondary';
                            if (proc.status === 'running') statusBadge = 'badge-success';
                            else if (proc.status === 'sleeping') statusBadge = 'badge-info';
                            
                            return `
                            <tr class="hover:bg-bg-elevated-2 transition-colors">
                                <td class="px-4 py-3 text-sm text-text-primary">${proc.pid}</td>
                                <td class="px-4 py-3 text-sm font-medium text-text-primary">${proc.name}</td>
                                <td class="px-4 py-3 text-sm text-text-secondary">${proc.username}</td>
                                <td class="px-4 py-3 text-sm text-text-primary">${proc.cpu_percent.toFixed(1)}%</td>
                                <td class="px-4 py-3 text-sm text-text-primary">${proc.memory_percent.toFixed(1)}%</td>
                                <td class="px-4 py-3 text-sm">
                                    <span class="badge ${statusBadge}">
                                        ${proc.status}
                                    </span>
                                </td>
                            </tr>
                        `}).join('');
                    } else {
                        // No active processes - show message
                        tbody.innerHTML = `
                        <tr>
                            <td colspan="6" class="px-4 py-8 text-center">
                                <svg class="mx-auto h-12 w-12 text-text-tertiary mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>
                                </svg>
                                <p class="text-text-secondary">No ZFS processes using more than 1% CPU</p>
                                <p class="text-text-tertiary text-sm mt-2">
                                    <a href="/zfs/performance/processes" class="text-primary-400 hover:text-primary-300">View all processes →</a>
                                </p>
                            </td>
                        </tr>
                        `;
                    }
                }
            }
            
            updateLastRefresh();
        } catch (error) {
            console.error('Error refreshing data:', error);
        }
    }
    
    function startRefresh() {
        if (refreshInterval) {
            clearInterval(refreshInterval);
        }
        refreshInterval = setInterval(refreshData, 5000); // Refresh every 5 seconds
    }
    
    // Start auto-refresh on page load
    if (autoRefresh) {
        startRefresh();
    }
    
    // Cleanup on page unload/navigation
    window.addEventListener('beforeunload', () => {
        if (refreshInterval) {
            clearInterval(refreshInterval);
        }
    });
    
    // Stop refresh when navigating away (HTMX boost)
    document.body.addEventListener('htmx:beforeSwap', () => {
        if (refreshInterval) {
            clearInterval(refreshInterval);
        }
    });
    
    // Pause when page is hidden, resume when visible
    document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
            if (refreshInterval) {
                clearInterval(refreshInterval);
            }
        } else if (autoRefresh) {
            startRefresh();
        }
    });
</script>
