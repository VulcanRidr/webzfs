{% extends "layout_main.jinja" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-4">
        <ol class="list-none p-0 inline-flex">
            <li class="flex items-center">
                <a href="/" class="text-primary-400 hover:text-primary-300">Home</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="flex items-center">
                <a href="/zfs/performance" class="text-primary-400 hover:text-primary-300">Performance</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li>
                <span class="text-text-secondary">Pool Capacity</span>
            </li>
        </ol>
    </nav>

    <h1 class="text-3xl font-bold mb-6">Pool Capacity Statistics</h1>

    {% if error %}
    <div class="bg-danger-900/30 border-2 border-danger-500/50 text-danger-400 px-4 py-3 rounded mb-4">
        <strong>Error:</strong> {{ error }}
    </div>
    {% endif %}

    <!-- Filter -->
    <div class="bg-bg-elevated rounded-lg shadow mb-6 p-6">
        <form method="get" action="/zfs/performance/capacity" class="flex gap-4 items-end">
            <div class="flex-1">
                <label for="pool" class="block text-sm font-medium text-text-secondary mb-1">Filter by Pool</label>
                <select name="pool" id="pool" class="form-input focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Pools</option>
                    {% for pool_name in all_pools %}
                    <option value="{{ pool_name }}" {% if selected_pool == pool_name %}selected{% endif %}>{{ pool_name }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" class="px-6 py-2 btn-primary transition-colors">
                Filter
            </button>
        </form>
    </div>

    <!-- Pool Capacity Cards -->
    {% if capacity_stats.pools %}
    <div class="space-y-6">
        {% for pool in capacity_stats.pools %}
        <div class="bg-bg-elevated rounded-lg shadow overflow-hidden">
            <div class="px-6 py-4 bg-gradient-to-r from-blue-500 to-blue-600 text-text-primary">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold">{{ pool.name }}</h2>
                    <span class="px-4 py-2 rounded-full text-sm font-semibold
                        {% if pool.health == 'ONLINE' %}
                            bg-green-500
                        {% elif pool.health == 'DEGRADED' %}
                            bg-yellow-500
                        {% else %}
                            bg-red-500
                        {% endif %}">
                        {{ pool.health }}
                    </span>
                </div>
            </div>
            
            <div class="p-6">
                <!-- Main Capacity Info -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-6">
                    <div class="text-center p-4 bg-bg-elevated-2 rounded-lg">
                        <p class="text-sm text-text-secondary mb-1">Total Size</p>
                        <p class="text-2xl font-bold text-text-primary">{{ pool.size }}</p>
                    </div>
                    <div class="text-center p-4 bg-primary-900/30 rounded-lg">
                        <p class="text-sm text-text-secondary mb-1">Allocated</p>
                        <p class="text-2xl font-bold text-primary-400">{{ pool.allocated }}</p>
                    </div>
                    <div class="text-center p-4 bg-success-900/30 rounded-lg">
                        <p class="text-sm text-text-secondary mb-1">Free Space</p>
                        <p class="text-2xl font-bold text-success-400">{{ pool.free }}</p>
                    </div>
                    <div class="text-center p-4 bg-purple-900/30 rounded-lg">
                        <p class="text-sm text-text-secondary mb-1">Capacity Used</p>
                        <p class="text-2xl font-bold text-purple-400">{{ pool.capacity }}</p>
                    </div>
                </div>

                <!-- Capacity Progress Bar -->
                <div class="mb-6">
                    <div class="flex justify-between text-sm text-text-secondary mb-2">
                        <span>Storage Usage</span>
                        <span>{{ pool.capacity }}</span>
                    </div>
                    {% set cap_num = pool.capacity.rstrip('%') | float %}
                    <div class="w-full bg-bg-elevated-3 rounded-full h-4">
                        <div class="h-4 rounded-full transition-all duration-300 flex items-center justify-end pr-2
                            {% if cap_num < 70 %}
                                bg-green-500
                            {% elif cap_num < 85 %}
                                bg-yellow-500
                            {% else %}
                                bg-red-500
                            {% endif %}"
                            style="width: {{ pool.capacity }}">
                            <span class="text-xs font-medium text-text-primary">{{ pool.capacity }}</span>
                        </div>
                    </div>
                    <div class="flex justify-between text-xs text-text-secondary mt-1">
                        <span>0%</span>
                        <span>25%</span>
                        <span>50%</span>
                        <span>75%</span>
                        <span>100%</span>
                    </div>
                </div>

                <!-- Additional Stats -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 pt-4 border-t">
                    <div class="flex justify-between">
                        <span class="text-text-secondary">Fragmentation:</span>
                        <span class="font-medium">{{ pool.fragmentation }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-text-secondary">Deduplication Ratio:</span>
                        <span class="font-medium">{{ pool.deduplication }}</span>
                    </div>
                </div>

                <!-- Warning Messages -->
                {% if cap_num >= 85 %}
                <div class="mt-4 p-4 bg-danger-900/30 border border-danger-500/50 rounded-lg">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-danger-400 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <div>
                            <p class="font-semibold text-danger-400">Critical Capacity Warning</p>
                            <p class="text-sm text-danger-300 mt-1">Pool capacity is above 85%. Consider adding more storage or removing unnecessary data.</p>
                        </div>
                    </div>
                </div>
                {% elif cap_num >= 70 %}
                <div class="mt-4 p-4 bg-warning-900/30 border border-warning-500/50 rounded-lg">
                    <div class="flex items-start">
                        <svg class="w-5 h-5 text-warning-400 mt-0.5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <div>
                            <p class="font-semibold text-warning-400">Capacity Warning</p>
                            <p class="text-sm text-warning-300 mt-1">Pool capacity is above 70%. Monitor storage usage and plan for expansion.</p>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="bg-bg-elevated rounded-lg shadow p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <p class="text-xl text-text-secondary">No pools available</p>
    </div>
    {% endif %}
</div>
{% endblock %}
