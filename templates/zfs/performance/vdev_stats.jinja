{% extends "layout_main.jinja" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-4">
        <ol class="list-none p-0 inline-flex">
            <li class="flex items-center">
                <a href="/" class="text-primary-400 hover:text-primary-300">Home</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="flex items-center">
                <a href="/zfs/performance" class="text-primary-400 hover:text-primary-300">Performance</a>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li>
                <span class="text-text-secondary">Per-VDEV Statistics</span>
            </li>
        </ol>
    </nav>

    <h1 class="text-3xl font-bold mb-6">Per-VDEV Statistics</h1>

    {% if error %}
    <div class="bg-danger-900/30 border-2 border-danger-500/50 text-danger-400 px-4 py-3 rounded mb-4">
        <strong>Error:</strong> {{ error }}
    </div>
    {% endif %}

    <!-- Pool Filter -->
    <div class="bg-bg-elevated rounded-lg shadow mb-6 p-6">
        <form method="get" action="/zfs/performance/vdev-stats" class="flex gap-4 items-end">
            <div class="flex-1">
                <label for="pool" class="block text-sm font-medium text-text-secondary mb-1">Select Pool</label>
                <select name="pool" id="pool" class="form-input focus:ring-blue-500 focus:border-blue-500">
                    {% for pool_name in all_pools %}
                    <option value="{{ pool_name }}" {% if selected_pool == pool_name %}selected{% endif %}>{{ pool_name }}</option>
                    {% endfor %}
                </select>
            </div>
            <button type="submit" class="px-6 py-2 btn-primary transition-colors">
                Load VDEVs
            </button>
        </form>
    </div>

    <!-- VDEV Statistics -->
    {% if selected_pool %}
    <div class="bg-bg-elevated rounded-lg shadow" x-data="{ autoRefresh: true }" x-init="window.autoRefresh = autoRefresh">
        <div class="px-6 py-4 border-b border-border-subtle">
            <div class="flex justify-between items-center">
                <h2 class="text-xl font-semibold">VDEV Statistics for {{ selected_pool }}</h2>
                <div class="flex items-center gap-4">
                    <span class="text-sm text-text-secondary" id="last-update">Live Monitoring</span>
                    <button @click="autoRefresh = !autoRefresh; window.autoRefresh = autoRefresh" 
                            class="px-4 py-2 transition-colors"
                            :class="autoRefresh ? 'btn-success' : 'btn-secondary'">
                        <span class="flex items-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            <span x-text="autoRefresh ? 'Auto-refresh: ON' : 'Auto-refresh: OFF'"></span>
                        </span>
                    </button>
                </div>
            </div>
        </div>
        <div class="p-6">
            {% if vdev_stats %}
            <div class="overflow-x-auto" 
                 hx-get="/zfs/performance/vdev-stats-table?pool={{ selected_pool }}"
                 hx-trigger="load, every 1s[autoRefresh]"
                 hx-swap="innerHTML">
                <table class="min-w-full">
                    <thead class="bg-bg-elevated-2 text-text-primary">
                        <tr>
                            <th class="px-4 py-3 text-left text-sm font-semibold">Device / VDEV</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold">Allocated</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold">Free</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold">Read Ops</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold">Write Ops</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold">Read BW</th>
                            <th class="px-4 py-3 text-right text-sm font-semibold">Write BW</th>
                        </tr>
                    </thead>
                    <tbody class="bg-bg-elevated font-mono text-sm">
                        {% for vdev in vdev_stats %}
                        {% set is_raidz = 'raidz' in vdev.name or 'mirror' in vdev.name %}
                        {% set is_disk = '-' in vdev.name or 'nvme' in vdev.name or 'sd' in vdev.name or 'loop' in vdev.name %}
                        <tr class="{% if is_raidz %}bg-primary-900/30 border-t-2 border-primary-500/50{% elif is_disk %}border-l-4 border-primary-500/30{% endif %} hover:bg-bg-elevated-2">
                            <td class="px-4 py-2 {% if is_raidz %}font-bold text-primary-300{% elif is_disk %}pl-12 text-text-secondary{% else %}font-semibold{% endif %}">
                                {{ vdev.name }}
                            </td>
                            <td class="px-4 py-2 text-right text-text-secondary">{{ vdev.alloc }}</td>
                            <td class="px-4 py-2 text-right text-text-secondary">{{ vdev.free }}</td>
                            <td class="px-4 py-2 text-right {% if vdev.read_ops|int > 0 %}text-primary-400 font-semibold{% else %}text-text-secondary{% endif %}">
                                {{ vdev.read_ops }}
                            </td>
                            <td class="px-4 py-2 text-right {% if vdev.write_ops|int > 0 %}text-success-400 font-semibold{% else %}text-text-secondary{% endif %}">
                                {{ vdev.write_ops }}
                            </td>
                            <td class="px-4 py-2 text-right {% if vdev.read_bw != '0' and vdev.read_bw != '-' %}text-primary-400 font-bold{% else %}text-text-secondary{% endif %}">
                                {{ vdev.read_bw }}
                            </td>
                            <td class="px-4 py-2 text-right {% if vdev.write_bw != '0' and vdev.write_bw != '-' %}text-success-400 font-bold{% else %}text-text-secondary{% endif %}">
                                {{ vdev.write_bw }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
            <div class="mt-6 p-4 bg-primary-900/20 border border-primary-500/30 rounded-lg">
                <p class="text-sm text-primary-300">
                    <strong>Note:</strong> These statistics show real-time I/O performance for each virtual device (VDEV) in the pool. 
                    Individual disks, mirrors, and RAIDZ groups are all represented here.
                </p>
            </div>
            {% else %}
            <p class="text-text-secondary text-center py-8">No VDEV statistics available for this pool</p>
            {% endif %}
        </div>
    </div>
    {% else %}
    <div class="bg-bg-elevated rounded-lg shadow p-12 text-center">
        <svg class="w-16 h-16 mx-auto text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <p class="text-xl text-text-secondary">Select a pool to view VDEV statistics</p>
    </div>
    {% endif %}
</div>

<script>
    // Global autoRefresh variable for HTMX conditional triggers
    window.autoRefresh = true;
    
    // Update last refresh time display
    const lastUpdate = document.getElementById('last-update');
    function updateLastRefresh() {
        const now = new Date();
        lastUpdate.textContent = `Last updated: ${now.toLocaleTimeString()}`;
    }
    
    // Update timestamp when HTMX completes a request
    document.body.addEventListener('htmx:afterSwap', updateLastRefresh);
    
    // Initial timestamp
    updateLastRefresh();
</script>
{% endblock %}
