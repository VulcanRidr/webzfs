{% extends "layout_main.jinja" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container-page">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li class="flex items-center">
                <a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a>
                <svg class="w-4 h-4 mx-2 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="flex items-center">
                <a href="/zfs/observability" class="text-primary-400 hover:text-primary-300 transition-colors">Observability</a>
                <svg class="w-4 h-4 mx-2 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li>
                <span class="text-text-primary font-medium">Search Logs</span>
            </li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-text-primary mb-2">Search ZFS Logs</h1>
        <p class="text-text-secondary">Search across all ZFS log sources</p>
    </div>

    <!-- Error Message -->
    {% if error %}
    <div class="bg-danger-900/30 border-l-4 border-danger-500 text-danger-400 px-4 py-3 rounded mb-6" role="alert">
        <div class="flex items-start">
            <svg class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div><strong class="font-semibold">Error:</strong> {{ error }}</div>
        </div>
    </div>
    {% endif %}

    <!-- Search Form -->
    <div class="card mb-8">
        <div class="p-6">
            <form method="get" action="/zfs/observability/search" class="space-y-6">
                <div>
                    <label for="query" class="form-label">Search Query</label>
                    <input type="text" id="query" name="query" value="{{ query or '' }}" 
                        placeholder="Enter search term (e.g., error, pool name, dataset name)"
                        class="form-input"
                        autofocus>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="source" class="form-label">Search In</label>
                        <select id="source" name="source" class="form-select">
                            <option value="all" {% if source == 'all' %}selected{% endif %}>All Sources</option>
                            <option value="pool_history" {% if source == 'pool_history' %}selected{% endif %}>Pool History</option>
                            <option value="events" {% if source == 'events' %}selected{% endif %}>Pool Events</option>
                            <option value="kernel" {% if source == 'kernel' %}selected{% endif %}>Kernel Debug Log</option>
                            <option value="syslog" {% if source == 'syslog' %}selected{% endif %}>System Log</option>
                        </select>
                    </div>
                    
                    <div>
                        <label for="limit" class="form-label">Max Results</label>
                        <select id="limit" name="limit" class="form-select">
                            <option value="50" {% if limit == 50 %}selected{% endif %}>50</option>
                            <option value="100" {% if limit == 100 %}selected{% endif %}>100</option>
                            <option value="250" {% if limit == 250 %}selected{% endif %}>250</option>
                            <option value="500" {% if limit == 500 %}selected{% endif %}>500</option>
                        </select>
                    </div>
                </div>
                
                <div>
                    <button type="submit" class="btn-primary">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Search Results -->
    {% if query %}
    <div class="card overflow-hidden">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary">
                Search Results for "<span class="text-primary-400">{{ query }}</span>" 
                {% if source != 'all' %}<span class="text-text-secondary text-base font-normal">in {{ source|replace('_', ' ')|title }}</span>{% endif %}
                <span class="text-sm font-normal text-text-secondary ml-2">({{ results|length }} found)</span>
            </h2>
        </div>
        
        {% if results %}
        <div class="divide-y divide-border-subtle">
            {% for result in results %}
            <div class="p-6 hover:bg-bg-elevated-2 transition-colors">
                <div class="flex items-start justify-between mb-3">
                    <span class="badge 
                        {% if result.source == 'pool_history' %}badge-primary
                        {% elif result.source == 'events' %}badge-warning
                        {% elif result.source == 'kernel' %}badge-success
                        {% elif result.source == 'syslog' %}badge-info
                        {% else %}badge-secondary{% endif %}">
                        {{ result.source|replace('_', ' ')|title }}
                    </span>
                    {% if result.timestamp or result.time %}
                    <span class="text-sm text-text-secondary font-mono">{{ result.timestamp or result.time }}</span>
                    {% endif %}
                </div>
                
                {% if result.command %}
                <div class="mb-2">
                    <span class="font-medium text-text-primary">Command:</span>
                    <code class="ml-2 text-sm bg-bg-elevated-2 px-2 py-1 rounded font-mono text-primary-400">{{ result.command }}</code>
                </div>
                {% endif %}
                
                {% if result.class %}
                <div class="mb-2">
                    <span class="font-medium text-text-primary">Event Class:</span>
                    <span class="ml-2 badge
                        {% if 'error' in result.class.lower() %}badge-danger
                        {% elif 'warn' in result.class.lower() %}badge-warning
                        {% else %}badge-info{% endif %}">
                        {{ result.class }}
                    </span>
                </div>
                {% endif %}
                
                {% if result.message %}
                <div class="mt-3">
                    <pre class="text-sm text-text-secondary whitespace-pre-wrap bg-bg-elevated-2 p-4 rounded-lg font-mono leading-relaxed">{{ result.message }}</pre>
                </div>
                {% endif %}
                
                {% if result.details %}
                <div class="mt-2 text-sm text-text-secondary">{{ result.details }}</div>
                {% endif %}
                
                {% if result.raw %}
                <details class="mt-3">
                    <summary class="text-sm text-primary-400 hover:text-primary-300 cursor-pointer transition-colors">Show raw data</summary>
                    <pre class="mt-2 text-xs text-text-secondary bg-gray-900 p-3 rounded overflow-x-auto font-mono border border-gray-800">{{ result.raw }}</pre>
                </details>
                {% endif %}
                
                {% if result.user or result.host or result.pool %}
                <div class="mt-3 flex flex-wrap gap-4 text-sm text-text-secondary">
                    {% if result.user %}
                    <span><strong class="text-text-primary">User:</strong> {{ result.user }}</span>
                    {% endif %}
                    {% if result.host %}
                    <span><strong class="text-text-primary">Host:</strong> {{ result.host }}</span>
                    {% endif %}
                    {% if result.pool %}
                    <span><strong class="text-text-primary">Pool:</strong> {{ result.pool }}</span>
                    {% endif %}
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="p-12 text-center">
            <svg class="mx-auto w-16 h-16 text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <p class="text-lg text-text-secondary mb-2">No results found for "{{ query }}"</p>
            <p class="text-sm text-text-tertiary">Try a different search term or broaden your search criteria</p>
        </div>
        {% endif %}
    </div>
    {% else %}
    <div class="card-nested bg-info-900/20 border-info-500/20">
        <div class="text-center py-8">
            <svg class="mx-auto w-16 h-16 text-info-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
            </svg>
            <h3 class="text-lg font-semibold text-info-400 mb-2">Search ZFS Logs</h3>
            <p class="text-sm text-info-400 mb-6">Enter a search term above to search across all ZFS log sources</p>
            <div class="text-left max-w-md mx-auto">
                <p class="text-sm font-semibold text-info-400 mb-2">Example searches:</p>
                <ul class="text-sm text-info-400 space-y-1.5">
                    <li class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        "error" - Find all error messages
                    </li>
                    <li class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        "tank" - Find all mentions of pool "tank"
                    </li>
                    <li class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        "scrub" - Find scrub-related events
                    </li>
                    <li class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                        "destroy" - Find destroy operations
                    </li>
                </ul>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
