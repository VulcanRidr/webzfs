{% extends "layout_main.jinja" %}

{% block title %}{{ page_title }}{% endblock %}

{% block content %}
<div class="container-page">
    <!-- Breadcrumb -->
    <nav class="text-sm mb-6" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2">
            <li class="flex items-center">
                <a href="/" class="text-primary-400 hover:text-primary-300 transition-colors">Home</a>
                <svg class="w-4 h-4 mx-2 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li class="flex items-center">
                <a href="/zfs/observability" class="text-primary-400 hover:text-primary-300 transition-colors">Observability</a>
                <svg class="w-4 h-4 mx-2 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </li>
            <li>
                <span class="text-text-primary font-medium">System Log</span>
            </li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-text-primary mb-2">{{ page_title }}</h1>
            <p class="text-text-secondary">{% if filtered %}ZFS-filtered system log messages{% else %}Full system log{% endif %}</p>
        </div>
        <div class="flex flex-wrap gap-2">
            <a href="/zfs/observability/syslog/download?lines={{ lines }}{% if severity %}&severity={{ severity }}{% endif %}" 
               class="btn-success flex items-center gap-2"
               hx-boost="false">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Download
            </a>
            {% if filtered %}
            <a href="/zfs/observability/syslog-full?lines={{ lines }}{% if severity %}&severity={{ severity }}{% endif %}" 
               class="btn-secondary">
                View Full Log
            </a>
            {% else %}
            <a href="/zfs/observability/syslog?lines={{ lines }}{% if severity %}&severity={{ severity }}{% endif %}" 
               class="btn-primary">
                View ZFS Filter
            </a>
            {% endif %}
        </div>
    </div>

    <!-- Error Message -->
    {% if error %}
    <div class="bg-danger-900/30 border-l-4 border-danger-500 text-danger-400 px-4 py-3 rounded mb-6" role="alert">
        <div class="flex items-start">
            <svg class="w-5 h-5 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div><strong class="font-semibold">Error:</strong> {{ error }}</div>
        </div>
    </div>
    {% endif %}

    <!-- Filters -->
    <div class="card mb-8">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-lg font-semibold text-text-primary flex items-center gap-2">
                <svg class="w-5 h-5 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                </svg>
                Filter Options
            </h2>
        </div>
        <div class="p-6">
            <form method="get" action="/zfs/observability/syslog" class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="lines" class="form-label">Number of Lines</label>
                    <select id="lines" name="lines" class="form-select">
                        <option value="100" {% if lines == 100 %}selected{% endif %}>100</option>
                        <option value="500" {% if lines == 500 %}selected{% endif %}>500</option>
                        <option value="1000" {% if lines == 1000 %}selected{% endif %}>1000</option>
                        <option value="5000" {% if lines == 5000 %}selected{% endif %}>5000</option>
                    </select>
                </div>
                <div>
                    <label for="severity" class="form-label">Severity Filter</label>
                    <select id="severity" name="severity" class="form-select">
                        <option value="" {% if not severity %}selected{% endif %}>All</option>
                        <option value="error" {% if severity == 'error' %}selected{% endif %}>Error</option>
                        <option value="warning" {% if severity == 'warning' %}selected{% endif %}>Warning</option>
                        <option value="info" {% if severity == 'info' %}selected{% endif %}>Info</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <button type="submit" class="btn-primary">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                        </svg>
                        Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Syslog Display -->
    <div class="card overflow-hidden mb-6">
        <div class="px-6 py-4 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary flex items-center gap-2">
                <svg class="w-5 h-5 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                System Log Entries
                <span class="text-sm font-normal text-text-secondary ml-2">({{ syslog_entries|length }} entries)</span>
            </h2>
        </div>
        
        <div class="p-6">
            {% if syslog_entries %}
            <div class="space-y-2">
                {% for entry in syslog_entries %}
                <div class="p-4 bg-bg-elevated-2 rounded-lg border-l-4 
                    {% if 'error' in entry.message.lower() %}border-danger-500
                    {% elif 'warn' in entry.message.lower() %}border-warning-500
                    {% else %}border-primary-500{% endif %}">
                    <pre class="text-sm text-text-primary whitespace-pre-wrap font-mono leading-relaxed m-0">{{ entry.message }}</pre>
                </div>
                {% endfor %}
            </div>
            {% else %}
            <div class="text-center py-12">
                <svg class="w-16 h-16 mx-auto text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
                <p class="text-text-secondary text-lg mb-2">No {% if filtered %}ZFS-related {% endif %}syslog entries found</p>
                <p class="text-text-tertiary text-sm">{% if filtered %}Try viewing the full system log{% else %}Try adjusting your filters{% endif %}</p>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Info Note -->
    <div class="card-nested bg-info-900/20 border-info-500/20">
        <div class="flex items-start">
            <svg class="w-5 h-5 text-info-400 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="text-sm text-info-400">
                <p class="mb-2"><strong>Source:</strong> <code class="bg-gray-900 px-2 py-0.5 rounded">journalctl</code> or <code class="bg-gray-900 px-2 py-0.5 rounded">/var/log/messages</code></p>
                <p><strong>Note:</strong> {% if filtered %}Only messages containing "zfs" or "zpool" keywords are displayed.{% else %}Showing complete system log without filtering.{% endif %}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
