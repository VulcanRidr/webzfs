{% extends "layout.jinja" %}

{% block content %}
<div class="max-w-4xl mx-auto space-y-6">
    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center text-sm text-text-secondary">
        <a href="/zfs/pools" class="hover:text-text-primary transition-colors">Pools</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a href="/zfs/snapshots" class="hover:text-text-primary transition-colors">Snapshots</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-text-primary font-medium">Rollback</span>
    </nav>

    <!-- Page Header -->
    <div>
        <h1 class="text-3xl font-bold text-warning-400 inline-flex items-center gap-3">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            Rollback to Snapshot
        </h1>
        <p class="text-warning-300 mt-2 font-semibold">This operation will destroy recent data!</p>
    </div>

    <!-- Error Message -->
    {% if error %}
        {% with message=error %}
            {% include "partials/error.jinja" %}
        {% endwith %}
    {% endif %}

    <!-- Critical Warning Box -->
    <div class="card-nested bg-danger-900/30 border-danger-600 border-2">
        <h3 class="text-lg font-bold mb-3 text-danger-300 inline-flex items-center gap-2">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            CRITICAL DATA LOSS WARNING
        </h3>
        <p class="text-danger-200 mb-3">
            You are about to <strong>rollback the dataset</strong> to this snapshot:
        </p>
        <div class="bg-danger-950 border border-danger-700 rounded-lg p-4 mb-3">
            <p class="text-danger-300 font-mono text-lg break-all">
                {{ snapshot_name }}
            </p>
        </div>
        <p class="text-warning-300 font-semibold inline-flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
            </svg>
            ALL DATA CREATED AFTER THIS SNAPSHOT WILL BE PERMANENTLY DESTROYED!
        </p>
    </div>

    <!-- What Will Happen -->
    <div class="card">
        <div class="p-4 bg-bg-elevated-2 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary inline-flex items-center gap-2">
                <svg class="w-5 h-5 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                What Will Happen
            </h2>
        </div>
        <div class="p-6">
            <ul class="space-y-3 text-text-secondary">
                <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-warning-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                    </svg>
                    <span>The dataset will be <strong class="text-text-primary">rolled back</strong> to the state it was in when this snapshot was created</span>
                </li>
                <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-danger-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span><strong class="text-text-primary">ALL changes made after</strong> this snapshot will be <strong class="text-text-primary">permanently lost</strong></span>
                </li>
                <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-danger-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Files created after the snapshot will be <strong class="text-text-primary">deleted</strong></span>
                </li>
                <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-danger-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>Files modified after the snapshot will <strong class="text-text-primary">revert</strong> to their snapshot state</span>
                </li>
                <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-danger-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>If "Force" is enabled, <strong class="text-text-primary">more recent snapshots will also be destroyed</strong></span>
                </li>
                <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-info-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <span>The rollback snapshot itself will remain intact</span>
                </li>
            </ul>
        </div>
    </div>

    <!-- Use Cases -->
    <div class="card-nested bg-info-900/20 border-info-700">
        <h3 class="text-sm font-semibold text-text-primary mb-2 inline-flex items-center gap-2">
            <svg class="w-4 h-4 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            When to use rollback
        </h3>
        <ul class="mt-2 space-y-1 text-xs text-text-secondary">
            <li class="flex items-start gap-2">
                <span class="text-text-tertiary mt-0.5">•</span>
                <span>Recovering from accidental data deletion or corruption</span>
            </li>
            <li class="flex items-start gap-2">
                <span class="text-text-tertiary mt-0.5">•</span>
                <span>Reverting after a failed upgrade or configuration change</span>
            </li>
            <li class="flex items-start gap-2">
                <span class="text-text-tertiary mt-0.5">•</span>
                <span>Undoing unwanted modifications to important files</span>
            </li>
            <li class="flex items-start gap-2">
                <span class="text-text-tertiary mt-0.5">•</span>
                <span>Restoring system to a known good state</span>
            </li>
        </ul>
    </div>

    <!-- Confirmation Form -->
    <div class="card">
        <div class="p-4 bg-bg-elevated-2 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary inline-flex items-center gap-2">
                <svg class="w-5 h-5 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Confirmation Required
            </h2>
        </div>
        <div class="p-6">
            <form method="post" action="/zfs/snapshots/{{ snapshot_name }}/rollback" class="space-y-6">
                <!-- Force Option -->
                <div>
                    <label class="flex items-start cursor-pointer">
                        <input 
                            type="checkbox" 
                            name="force" 
                            value="true"
                            class="form-checkbox mt-0.5"
                        >
                        <span class="ml-2">
                            <span class="text-sm text-danger-400 font-semibold block">Force rollback - Destroy more recent snapshots</span>
                            <span class="text-text-tertiary text-xs block mt-0.5">
                                <svg class="w-3 h-3 inline text-warning-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                                </svg>
                                If checked, ZFS will destroy all snapshots newer than this one to complete the rollback.
                                <strong>This cannot be undone!</strong> Only enable if you're certain.
                            </span>
                        </span>
                    </label>
                </div>

                <!-- Type Confirmation -->
                <div>
                    <label for="confirm" class="form-label">
                        Type the <strong>full snapshot name</strong> to confirm: <span class="text-danger-400">*</span>
                    </label>
                    <div class="bg-bg-elevated-3 border border-border-default rounded-lg p-3 mb-3">
                        <code class="text-success-400 text-sm font-mono break-all">{{ snapshot_name }}</code>
                    </div>
                    <input 
                        type="text" 
                        id="confirm" 
                        name="confirm" 
                        required
                        placeholder="Type the snapshot name here..."
                        class="form-input w-full border-warning-600 focus:border-warning-500 focus:ring-warning-500/20"
                        autocomplete="off"
                    >
                    <p class="text-text-tertiary text-xs mt-1">
                        You must type the exact snapshot name above to proceed with rollback.
                    </p>
                </div>

                <!-- Final Warning -->
                <div class="card-nested bg-danger-900/30 border-danger-600 border-2">
                    <h4 class="font-bold text-danger-300 mb-2 inline-flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        FINAL WARNING
                    </h4>
                    <p class="text-danger-200 text-sm mb-2">This operation is <strong>DESTRUCTIVE and IRREVERSIBLE</strong>.</p>
                    <ul class="space-y-1 text-xs text-danger-200">
                        <li class="flex items-start gap-2">
                            <svg class="w-3 h-3 text-success-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Make sure you have alternative backups of any important data</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <svg class="w-3 h-3 text-success-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Verify this is the correct snapshot to rollback to</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <svg class="w-3 h-3 text-success-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Understand that all recent changes will be lost</span>
                        </li>
                        <li class="flex items-start gap-2">
                            <svg class="w-3 h-3 text-success-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Consider cloning the snapshot instead if you want to preserve current data</span>
                        </li>
                    </ul>
                </div>

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3">
                    <button 
                        type="button"
                        class="btn-warning inline-flex items-center justify-center gap-2 font-bold"
                        onclick="showConfirm('confirm-rollback-snapshot')"
                    >
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                        </svg>
                        Yes, Rollback Dataset
                    </button>
                    <a 
                        href="/zfs/snapshots/{{ snapshot_name }}/detail" 
                        class="btn-secondary inline-flex items-center justify-center gap-2"
                    >
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Cancel (Recommended)
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Alternative Options -->
    <div class="card-nested">
        <h3 class="text-sm font-semibold text-text-primary mb-3 inline-flex items-center gap-2">
            <svg class="w-4 h-4 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
            Consider These Safer Alternatives
        </h3>
        <ul class="text-xs text-text-secondary space-y-2">
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span><strong>Clone the snapshot:</strong> Create a new dataset from this snapshot without affecting the current one - 
                <a href="/zfs/snapshots/{{ snapshot_name }}/clone/form" class="text-primary-400 hover:text-primary-300 transition-colors">Clone Now</a>
                </span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span><strong>Compare changes:</strong> Review what has changed since this snapshot - 
                <a href="/zfs/snapshots/diff/form?snapshot1={{ snapshot_name }}" class="text-primary-400 hover:text-primary-300 transition-colors">View Diff</a>
                </span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span><strong>Selective restore:</strong> Manually copy specific files from the snapshot's .zfs/snapshot directory</span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span><strong>Create a new snapshot:</strong> Take a snapshot of the current state before rolling back, just in case</span>
            </li>
        </ul>
    </div>
</div>

<!-- Confirmation Modal -->
{% set modal_id = 'confirm-rollback-snapshot' %}
{% set modal_title = 'Final Rollback Confirmation' %}
{% set modal_message = 'Are you ABSOLUTELY CERTAIN you want to rollback to ' ~ snapshot_name ~ '? This will DESTROY ALL DATA created after this snapshot! This operation is IRREVERSIBLE and cannot be undone!' %}
{% set confirm_text = 'Yes, Rollback Now' %}
{% set confirm_class = 'warning' %}
{% set action_url = '/zfs/snapshots/' ~ snapshot_name ~ '/rollback' %}
{% set method = 'post' %}
{% include 'partials/confirm.jinja' %}

{% endblock %}
