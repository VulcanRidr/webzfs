{% extends "layout.jinja" %}

{% block content %}
<div class="max-w-7xl mx-auto space-y-6">
    <!-- Breadcrumb Navigation -->
    <nav class="flex items-center text-sm text-text-secondary">
        <a href="/zfs/pools" class="hover:text-text-primary transition-colors">Pools</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-text-primary font-medium">Snapshots</span>
    </nav>

    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div>
            <h1 class="text-3xl font-bold text-text-primary">ZFS Snapshots</h1>
            <p class="text-text-secondary mt-1">Manage point-in-time copies of your datasets</p>
        </div>
        <div class="flex flex-wrap gap-2">
            <a href="/zfs/snapshots/create/form" class="btn-success inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create Snapshot
            </a>
            <a href="/zfs/snapshots/diff/form" class="btn-info inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
                Compare Snapshots
            </a>
            <a href="/zfs/snapshots/sanoid" class="btn-primary inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Sanoid Scheduling
            </a>
        </div>
    </div>

    <!-- Success/Error Messages -->
    {% if request.query_params.get('message') %}
        {% with message=request.query_params.get('message') %}
            {% include "partials/success.jinja" %}
        {% endwith %}
    {% endif %}
    
    {% if error %}
        {% with message=error %}
            {% include "partials/error.jinja" %}
        {% endwith %}
    {% endif %}

    <!-- Filter Bar -->
    <div class="card">
        <div class="p-4">
            <form method="get" action="/zfs/snapshots" class="flex flex-col sm:flex-row gap-4 items-end">
                <div class="flex-1 w-full">
                    <label for="dataset" class="form-label">Filter by Dataset</label>
                    <input type="text" 
                           id="dataset" 
                           name="dataset" 
                           value="{{ selected_dataset or '' }}" 
                           placeholder="e.g., tank/data"
                           class="form-input w-full">
                </div>
                <div class="flex gap-2">
                    <button type="submit" class="btn-primary inline-flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                        </svg>
                        Filter
                    </button>
                    {% if selected_dataset %}
                    <a href="/zfs/snapshots" class="btn-secondary inline-flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                        Clear
                    </a>
                    {% endif %}
                </div>
            </form>
        </div>
    </div>

    {% if snapshots %}
    <!-- Statistics -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="card">
            <div class="p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="text-text-tertiary text-sm">Total Snapshots</div>
                        <div class="text-2xl font-bold text-text-primary mt-1">{{ snapshots|length }}</div>
                    </div>
                    <div class="p-3 bg-primary-900/50 rounded-lg">
                        <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="text-text-tertiary text-sm">Datasets</div>
                        <div class="text-2xl font-bold text-text-primary mt-1">{{ snapshots|map(attribute='dataset')|unique|list|length }}</div>
                    </div>
                    <div class="p-3 bg-info-900/50 rounded-lg">
                        <svg class="w-6 h-6 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="text-text-tertiary text-sm">Total Used</div>
                        <div class="text-lg font-bold text-text-primary mt-1">
                            {% set total_used = [] %}
                            {% for snap in snapshots %}
                                {% if snap.used != '-' %}
                                    {% set _ = total_used.append(snap.used) %}
                                {% endif %}
                            {% endfor %}
                            {{ total_used|length }} tracked
                        </div>
                    </div>
                    <div class="p-3 bg-success-900/50 rounded-lg">
                        <svg class="w-6 h-6 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <div class="text-text-tertiary text-sm">Filtered View</div>
                        <div class="text-lg font-semibold text-text-primary mt-1">
                            {% if selected_dataset %}
                                {{ selected_dataset }}
                            {% else %}
                                All Datasets
                            {% endif %}
                        </div>
                    </div>
                    <div class="p-3 bg-warning-900/50 rounded-lg">
                        <svg class="w-6 h-6 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Snapshots Table -->
    <div class="card">
        <div class="p-4 bg-bg-elevated-2 border-b border-border-subtle">
            <h2 class="text-xl font-semibold text-text-primary inline-flex items-center gap-2">
                <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                All Snapshots ({{ snapshots|length }})
            </h2>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead class="bg-bg-elevated-2">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Snapshot Name
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Dataset
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Used
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Referenced
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Created
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-subtle">
                    {% for snapshot in snapshots %}
                    <tr class="hover:bg-bg-elevated-2 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <a href="/zfs/snapshots/{{ snapshot.name }}/detail" class="text-primary-400 hover:text-primary-300 font-semibold transition-colors">
                                {{ snapshot.snapshot }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <a href="/zfs/datasets/{{ snapshot.dataset }}" class="text-text-secondary hover:text-text-primary text-sm transition-colors">
                                {{ snapshot.dataset }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-primary font-mono">
                            {{ snapshot.used }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-primary font-mono">
                            {{ snapshot.refer }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-text-tertiary">
                            {{ snapshot.creation }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end gap-2">
                                <a href="/zfs/snapshots/{{ snapshot.name }}/detail" 
                                   class="p-1.5 text-info-400 hover:text-info-300 hover:bg-info-900/20 rounded transition-colors" 
                                   title="View Details">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                    </svg>
                                </a>
                                <a href="/zfs/snapshots/{{ snapshot.name }}/clone/form" 
                                   class="p-1.5 text-success-400 hover:text-success-300 hover:bg-success-900/20 rounded transition-colors" 
                                   title="Clone">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                    </svg>
                                </a>
                                <a href="/zfs/snapshots/{{ snapshot.name }}/rollback/confirm" 
                                   class="p-1.5 text-warning-400 hover:text-warning-300 hover:bg-warning-900/20 rounded transition-colors" 
                                   title="Rollback">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                                    </svg>
                                </a>
                                <a href="/zfs/snapshots/{{ snapshot.name }}/rename/form" 
                                   class="p-1.5 text-primary-400 hover:text-primary-300 hover:bg-primary-900/20 rounded transition-colors" 
                                   title="Rename">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>
                                <a href="/zfs/snapshots/{{ snapshot.name }}/destroy/confirm" 
                                   class="p-1.5 text-danger-400 hover:text-danger-300 hover:bg-danger-900/20 rounded transition-colors" 
                                   title="Destroy">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Action Legend -->
    <div class="card-nested">
        <h3 class="text-sm font-semibold text-text-primary mb-4 inline-flex items-center gap-2">
            <svg class="w-4 h-4 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Action Icons
        </h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-3 text-xs text-text-secondary">
            <div class="flex items-center gap-2">
                <svg class="w-3.5 h-3.5 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <span>View Details</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-3.5 h-3.5 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <span>Clone to New Dataset</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-3.5 h-3.5 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
                </svg>
                <span>Rollback Dataset</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-3.5 h-3.5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                </svg>
                <span>Rename Snapshot</span>
            </div>
            <div class="flex items-center gap-2">
                <svg class="w-3.5 h-3.5 text-danger-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                <span>Destroy Snapshot</span>
            </div>
        </div>
    </div>

    {% else %}
    <!-- No Snapshots -->
    <div class="card text-center py-12">
        <svg class="w-16 h-16 mx-auto text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"></path>
        </svg>
        <div class="text-text-secondary text-lg mb-2">
            {% if selected_dataset %}
                No snapshots found for dataset: <span class="text-text-primary font-semibold">{{ selected_dataset }}</span>
            {% else %}
                No ZFS snapshots found on this system
            {% endif %}
        </div>
        <p class="text-text-tertiary mb-6 max-w-md mx-auto">
            Snapshots are point-in-time copies of datasets that preserve the state of your data.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a href="/zfs/snapshots/create/form" class="btn-success inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create Your First Snapshot
            </a>
            {% if selected_dataset %}
            <a href="/zfs/snapshots" class="btn-secondary inline-flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                </svg>
                View All Snapshots
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
