{% extends "layout.jinja" %}

{% block content %}
<div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Breadcrumb Navigation -->
    <nav class="text-sm text-text-secondary mb-4 flex items-center gap-2">
        <a href="/zfs/pools" class="hover:text-text-primary transition-colors">Pools</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <a href="/zfs/snapshots" class="hover:text-text-primary transition-colors">Snapshots</a>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="text-text-primary">Diff Result</span>
    </nav>

    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-text-primary">Snapshot Comparison Results</h1>
        <p class="text-text-secondary mt-2">Differences between snapshots</p>
    </div>

    <!-- Comparison Info -->
    <div class="card mb-6">
        <h3 class="text-sm font-semibold text-text-secondary mb-3 flex items-center gap-2">
            <svg class="w-4 h-4 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
            </svg>
            Comparing
        </h3>
        <div class="space-y-2">
            <div class="flex items-center gap-3">
                <span class="text-text-secondary w-16">From:</span>
                <code class="text-success-400 bg-bg-elevated-2 px-2 py-1 rounded">{{ snapshot1 }}</code>
            </div>
            <div class="flex items-center gap-3">
                <span class="text-text-secondary w-16">To:</span>
                <code class="text-info-400 bg-bg-elevated-2 px-2 py-1 rounded">{{ snapshot2 }}</code>
            </div>
        </div>
    </div>

    <!-- Diff Output -->
    <div class="card">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold text-text-primary">Changes Detected</h2>
            <div class="flex gap-2">
                {% if diff_output %}
                <a href="/zfs/snapshots/diff/download?snapshot1={{ snapshot1 }}&snapshot2={{ snapshot2 }}" class="btn-secondary flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                    </svg>
                    Download
                </a>
                {% endif %}
                <a href="/zfs/snapshots/diff/form" class="btn-primary flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                    </svg>
                    New Comparison
                </a>
            </div>
        </div>

        {% if diff_output %}
        <!-- Legend -->
        <div class="card-nested mb-4">
            <div class="text-xs flex flex-wrap gap-4">
                <div class="flex items-center gap-1.5">
                    <code class="px-2 py-0.5 bg-success-900/50 text-success-400 rounded font-mono">+</code>
                    <span class="text-text-secondary">Added</span>
                </div>
                <div class="flex items-center gap-1.5">
                    <code class="px-2 py-0.5 bg-warning-900/50 text-warning-400 rounded font-mono">M</code>
                    <span class="text-text-secondary">Modified</span>
                </div>
                <div class="flex items-center gap-1.5">
                    <code class="px-2 py-0.5 bg-danger-900/50 text-danger-400 rounded font-mono">-</code>
                    <span class="text-text-secondary">Removed</span>
                </div>
                <div class="flex items-center gap-1.5">
                    <code class="px-2 py-0.5 bg-info-900/50 text-info-400 rounded font-mono">R</code>
                    <span class="text-text-secondary">Renamed</span>
                </div>
            </div>
        </div>

        <!-- Diff Content -->
        <div class="bg-bg-base border border-border-subtle rounded-lg p-4 overflow-x-auto mb-4">
            <pre class="text-sm font-mono text-text-primary">{% for line in diff_output.split('\n') %}{% if line.strip() %}{% if line.startswith('+') or line.startswith('A') %}<span class="text-success-400">{{ line }}</span>{% elif line.startswith('M') %}<span class="text-warning-400">{{ line }}</span>{% elif line.startswith('-') or line.startswith('R') %}<span class="text-danger-400">{{ line }}</span>{% elif line.startswith('R') %}<span class="text-info-400">{{ line }}</span>{% else %}<span class="text-text-primary">{{ line }}</span>{% endif %}
{% endif %}{% endfor %}</pre>
        </div>

        <!-- Summary -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div class="card-nested bg-success-900/20 border-success-900">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    <div>
                        <div class="text-success-400 text-2xl font-bold">{{ additions }}</div>
                        <div class="text-text-secondary text-xs">Added</div>
                    </div>
                </div>
            </div>
            <div class="card-nested bg-warning-900/20 border-warning-900">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    <div>
                        <div class="text-warning-400 text-2xl font-bold">{{ modifications }}</div>
                        <div class="text-text-secondary text-xs">Modified</div>
                    </div>
                </div>
            </div>
            <div class="card-nested bg-danger-900/20 border-danger-900">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-danger-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    <div>
                        <div class="text-danger-400 text-2xl font-bold">{{ deletions }}</div>
                        <div class="text-text-secondary text-xs">Removed</div>
                    </div>
                </div>
            </div>
            <div class="card-nested bg-info-900/20 border-info-900">
                <div class="flex items-center gap-3">
                    <svg class="w-8 h-8 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4"/>
                    </svg>
                    <div>
                        <div class="text-info-400 text-2xl font-bold">{{ renames }}</div>
                        <div class="text-text-secondary text-xs">Renamed</div>
                    </div>
                </div>
            </div>
        </div>

        {% else %}
        <!-- No Changes -->
        <div class="text-center py-12">
            <svg class="w-16 h-16 text-success-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="text-text-primary text-lg font-semibold mb-2">No differences found</div>
            <p class="text-text-secondary text-sm">The snapshots are identical.</p>
        </div>
        {% endif %}
    </div>

    <!-- Actions -->
    <div class="mt-6 flex flex-wrap gap-4">
        <a href="/zfs/snapshots/{{ snapshot1.split('@')[0] }}" class="btn-secondary flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to Snapshots
        </a>
        <a href="/zfs/snapshots/diff/form?snapshot1={{ snapshot1 }}" class="btn-info flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            Run Another Comparison
        </a>
    </div>

    <!-- Tips -->
    <div class="mt-6 card-nested bg-primary-900/20 border-primary-900">
        <h3 class="text-sm font-semibold text-primary-400 mb-3 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
            Using Diff Results
        </h3>
        <ul class="text-xs text-text-secondary space-y-2">
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span>Use diff before rollback to see exactly what will be lost</span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span>Monitor important files to detect unauthorized changes</span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span>Audit system changes after updates or migrations</span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span>Identify files that need to be backed up separately</span>
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-3 h-3 text-primary-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
                <span>Track configuration drift over time</span>
            </li>
        </ul>
    </div>

</div>
{% endblock %}
