{% extends "layout.jinja" %}

{% set active_page = 'utils' %}

{% block content %}
<div class="container mx-auto px-4 py-6">
    <!-- Breadcrumb Navigation -->
    <nav class="text-sm mb-6 text-text-tertiary">
        <a href="/utils" class="hover:text-primary-400">Utilities</a> 
        <span class="mx-2">/</span> 
        <a href="/utils/ssh" class="hover:text-primary-400">SSH Connection Manager</a>
        <span class="mx-2">/</span>
        <span class="text-text-primary">Add Connection</span>
    </nav>

    <!-- Page Header -->
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-text-primary">Add SSH Connection</h1>
        <p class="text-text-secondary mt-1">
            Create a new SSH connection with automatic key-based authentication setup
        </p>
    </div>

    <!-- Info Banner -->
    <div class="card-nested bg-warning-900/20 border-warning-700 mb-6">
        <div class="flex gap-3">
            <svg class="w-5 h-5 text-warning-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div class="text-sm">
                <p class="font-medium text-warning-400 mb-2">How it works:</p>
                <ol class="list-decimal list-inside space-y-1 text-text-secondary">
                    <li>Enter connection details including password (used once only)</li>
                    <li>System generates a unique SSH key pair for this connection</li>
                    <li>Public key is automatically copied to the remote server</li>
                    <li>Password is discarded and never stored</li>
                    <li>All future connections use the generated SSH key</li>
                </ol>
            </div>
        </div>
    </div>

    <!-- Error Message -->
    {% if error %}
    <div class="card-nested bg-danger-900/30 border-danger-900 mb-6">
        <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-danger-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="text-sm text-danger-300">
                {{ error }}
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Add Connection Form -->
    <form method="post" action="/utils/ssh/add" class="card">
        <div class="card-body space-y-6">
            <!-- Connection Name -->
            <div>
                <label for="name" class="form-label">
                    Connection Name <span class="text-danger-400">*</span>
                </label>
                <input 
                    type="text" 
                    name="name" 
                    id="name" 
                    required 
                    class="form-input" 
                    placeholder="Production Server 1"
                >
                <p class="mt-1 text-sm text-text-tertiary">
                    A friendly name to identify this connection
                </p>
            </div>

            <!-- Host -->
            <div>
                <label for="host" class="form-label">
                    Host (IP or Hostname) <span class="text-danger-400">*</span>
                </label>
                <input 
                    type="text" 
                    name="host" 
                    id="host" 
                    required 
                    class="form-input" 
                    placeholder="192.168.1.100 or server.example.com"
                >
                <p class="mt-1 text-sm text-text-tertiary">
                    IP address or fully qualified domain name
                </p>
            </div>

            <!-- Port -->
            <div>
                <label for="port" class="form-label">
                    SSH Port
                </label>
                <input 
                    type="number" 
                    name="port" 
                    id="port" 
                    value="22" 
                    class="form-input"
                >
                <p class="mt-1 text-sm text-text-tertiary">
                    Default SSH port is 22
                </p>
            </div>

            <!-- Username -->
            <div>
                <label for="username" class="form-label">
                    Username <span class="text-danger-400">*</span>
                </label>
                <input 
                    type="text" 
                    name="username" 
                    id="username" 
                    required 
                    class="form-input" 
                    placeholder="root or zfsadmin"
                >
                <p class="mt-1 text-sm text-text-tertiary">
                    User account on the remote server
                </p>
            </div>

            <!-- Password (One-time use) -->
            <div>
                <label for="password" class="form-label">
                    Password <span class="text-danger-400">*</span>
                </label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    required 
                    class="form-input"
                    autocomplete="new-password"
                >
                <p class="mt-1 text-sm text-text-tertiary">
                    <strong class="text-warning-400">One-time use:</strong> Used only to install the SSH key, then discarded
                </p>
            </div>

            <!-- Notes (Optional) -->
            <div>
                <label for="notes" class="form-label">
                    Notes (Optional)
                </label>
                <textarea 
                    name="notes" 
                    id="notes" 
                    rows="3" 
                    class="form-input"
                    placeholder="e.g., Production backup server, requires VPN"
                ></textarea>
                <p class="mt-1 text-sm text-text-tertiary">
                    Additional notes about this connection
                </p>
            </div>
        </div>

        <!-- Form Footer -->
        <div class="card-footer flex justify-end gap-3">
            <a href="/utils/ssh" class="btn-secondary">Cancel</a>
            <button type="submit" class="btn-primary">Create Connection</button>
        </div>
    </form>
</div>
{% endblock %}
