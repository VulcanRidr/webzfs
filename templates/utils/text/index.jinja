{% extends "layout_main.jinja" %}

{% set active_page = 'text' %}

{% block caption %}Text Editor{% endblock %}

{% block inner %}
    <!-- Info Box -->
    <div class="card-nested bg-info-900/30 border-info-900 mb-6">
        <div class="flex items-start gap-3">
            <svg class="w-5 h-5 text-info-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <div class="text-sm text-text-secondary">
                <strong class="text-info-400">Text Editor:</strong> Load and edit text files directly from the web interface with syntax highlighting support.
            </div>
        </div>
    </div>

    <!-- Load File Form -->
    <form action="/utils/text/read" method="post" class="mb-6">
        <div class="mb-4">
            <label class="form-label" for="file_path">
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    File Path
                </span>
            </label>
            <input 
                class="form-input font-mono" 
                id="file_path" 
                name="file_path" 
                type="text" 
                placeholder="/path/to/file.txt"
                required
            >
            <p class="text-xs text-text-tertiary mt-1">Enter the full path to the file you want to edit</p>
        </div>
        
        <button 
            hx-post="/utils/text/read" 
            hx-target="#edit" 
            class="btn-primary w-full sm:w-auto" 
            type="submit"
        >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            Load File
        </button>
    </form>

    <!-- Common File Paths Section -->
    <div class="card-nested mb-6">
        <h3 class="text-lg font-semibold text-text-primary mb-3 flex items-center gap-2">
            <svg class="w-5 h-5 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Common Configuration Files
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <button 
                type="button"
                onclick="document.getElementById('file_path').value='/etc/fstab'"
                class="flex items-center gap-3 p-3 rounded-lg bg-bg-elevated-2 hover:bg-bg-elevated-3 border border-border-default transition-colors text-left"
            >
                <svg class="w-5 h-5 text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"/>
                </svg>
                <div>
                    <div class="text-sm font-medium text-text-primary">/etc/fstab</div>
                    <div class="text-xs text-text-tertiary">Filesystem mounts</div>
                </div>
            </button>
            <button 
                type="button"
                onclick="document.getElementById('file_path').value='/etc/hosts'"
                class="flex items-center gap-3 p-3 rounded-lg bg-bg-elevated-2 hover:bg-bg-elevated-3 border border-border-default transition-colors text-left"
            >
                <svg class="w-5 h-5 text-info-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
                <div>
                    <div class="text-sm font-medium text-text-primary">/etc/hosts</div>
                    <div class="text-xs text-text-tertiary">Host resolution</div>
                </div>
            </button>
            <button 
                type="button"
                onclick="document.getElementById('file_path').value='/etc/ssh/sshd_config'"
                class="flex items-center gap-3 p-3 rounded-lg bg-bg-elevated-2 hover:bg-bg-elevated-3 border border-border-default transition-colors text-left"
            >
                <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                <div>
                    <div class="text-sm font-medium text-text-primary">/etc/ssh/sshd_config</div>
                    <div class="text-xs text-text-tertiary">SSH daemon config</div>
                </div>
            </button>
            <button 
                type="button"
                onclick="document.getElementById('file_path').value='/etc/resolv.conf'"
                class="flex items-center gap-3 p-3 rounded-lg bg-bg-elevated-2 hover:bg-bg-elevated-3 border border-border-default transition-colors text-left"
            >
                <svg class="w-5 h-5 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
                </svg>
                <div>
                    <div class="text-sm font-medium text-text-primary">/etc/resolv.conf</div>
                    <div class="text-xs text-text-tertiary">DNS resolution</div>
                </div>
            </button>
        </div>
    </div>

    <!-- Editor Container -->
    <div id="edit" class="w-full"></div>
{% endblock %}
