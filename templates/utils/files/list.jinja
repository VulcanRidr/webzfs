{% extends "layout_main.jinja" %}

{% set active_page = "files" %}

{% block caption %}File Browser{% endblock %}

{% block inner %}
    <!-- Parent Directory Navigation -->
    {% if directory != "/" %}
    <div class="mb-4">
        <button hx-post="/utils/files/list" 
                hx-vals='{"directory": "{{ directory.rsplit('/', 1)[0] or '/' }}"}' 
                hx-target="body"
                hx-swap="innerHTML"
                class="btn-secondary">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Parent Directory
        </button>
    </div>
    {% endif %}

    <!-- Browse Form -->
    <form action="/utils/files/list" method="post" class="mb-6">
        <div class="mb-4">
            <label class="form-label" for="directory">
                <span class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                    </svg>
                    Directory Path
                </span>
            </label>
            <input
                class="form-input"
                id="directory"
                name="directory"
                type="text"
                placeholder="/path/to/directory"
                value="{{ directory }}"
                required
            >
        </div>
        <div class="flex items-center gap-3">
            <button class="btn-primary" type="submit">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                Browse Directory
            </button>
        </div>
    </form>
    
    <!-- Current Directory Display -->
    <div class="card mb-6">
        <div class="card-body">
            <div class="flex items-center justify-between">
                <div>
                    <h2 class="text-xl font-semibold text-text-primary mb-1 flex items-center gap-2">
                        <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                        </svg>
                        Directory Contents
                    </h2>
                    <p class="text-sm text-text-secondary font-mono">{{ directory }}</p>
                </div>
                <div class="text-sm text-text-tertiary">
                    {{ files|length }} item{% if files|length != 1 %}s{% endif %}
                </div>
            </div>
        </div>
    </div>
    
    <!-- File List Table -->
    <div class="card">
        <div class="overflow-x-auto">
            <table class="min-w-full">
                <thead>
                    <tr class="bg-bg-elevated-2">
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Name
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Type
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Size
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-text-secondary uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-border-subtle">
                    {% if files %}
                        {% for file in files %}
                        <tr class="hover:bg-bg-elevated-2 transition-colors">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    {% if file.is_dir %}
                                    <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                                    </svg>
                                    {% else %}
                                    <svg class="w-5 h-5 text-text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                    {% endif %}
                                    <span class="text-sm text-text-primary font-medium">{{ file.name }}</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                {% if file.is_dir %}
                                <span class="badge-info">Directory</span>
                                {% else %}
                                <span class="badge-secondary">File</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-text-secondary">
                                {% if not file.is_dir %}
                                {{ file.size }} bytes
                                {% else %}
                                <span class="text-text-tertiary">â€”</span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                                {% if file.is_dir %}
                                <button hx-post="/utils/files/list" 
                                        hx-vals='{"directory": "{{ file.path }}"}' 
                                        hx-target="body"
                                        hx-swap="innerHTML"
                                        class="btn-info btn-sm">
                                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                                    </svg>
                                    Open
                                </button>
                                {% else %}
                                <form action="/utils/files/read" method="post" class="inline">
                                    <input type="hidden" name="file_path" value="{{ file.path }}">
                                    <button type="submit" class="btn-primary btn-sm">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                        </svg>
                                        Edit
                                    </button>
                                </form>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center">
                                    <svg class="w-16 h-16 text-text-tertiary mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z"/>
                                    </svg>
                                    <p class="text-text-secondary text-lg font-medium mb-1">Directory is empty</p>
                                    <p class="text-text-tertiary text-sm">This directory contains no files or subdirectories</p>
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
