{# 
  Toast notification component - Auto-dismissing notifications
  
  Parameters:
  - message: notification message text (required)
  - type: toast type - 'success', 'error', 'warning', 'info' (default: 'info')
  - duration: auto-dismiss duration in milliseconds (default: 5000, 0 to disable)
  - title: optional title
#}

<div 
  id="toast-container" 
  class="fixed top-4 right-4 z-50 space-y-2 pointer-events-none"
  hx-swap-oob="beforeend"
>
  <div 
    class="toast toast-{{ type|default('info') }} pointer-events-auto animate-slide-in"
    {% if duration|default(5000) > 0 %}
      x-data="{ show: true }"
      x-show="show"
      x-init="setTimeout(() => show = false, {{ duration|default(5000) }})"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-2"
    {% endif %}
  >
    <div class="flex items-start max-w-md">
      {# Icon #}
      <div class="flex-shrink-0">
        {% if type == 'success' %}
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        {% elif type == 'error' %}
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        {% elif type == 'warning' %}
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        {% else %}
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        {% endif %}
      </div>

      {# Content #}
      <div class="flex-1 ml-3">
        {% if title %}
          <p class="text-sm font-semibold">{{ title }}</p>
          <p class="mt-1 text-sm opacity-90">{{ message }}</p>
        {% else %}
          <p class="text-sm">{{ message }}</p>
        {% endif %}
      </div>

      {# Close Button #}
      <div class="flex-shrink-0 ml-4">
        <button
          type="button"
          class="inline-flex opacity-70 hover:opacity-100 focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg p-1 transition-opacity"
          onclick="this.closest('.toast').remove()"
          aria-label="Close"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

{# Note: This component requires Alpine.js for auto-dismiss functionality #}
