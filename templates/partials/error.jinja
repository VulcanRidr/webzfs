{# 
  Error message component with HTMX out-of-band swap
  
  Parameters:
  - error: error message text (required)
  - title: error title (default: "Error")
  - dismissible: whether error can be dismissed (default: true)
#}

<div id="error" hx-swap-oob="true">
  {% if error %}
    <div class="alert-danger animate-slide-in" role="alert">
      <div class="flex items-start">
        {# Error Icon #}
        <div class="flex-shrink-0">
          <svg class="w-5 h-5 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>

        {# Error Content #}
        <div class="flex-1 ml-3">
          <h3 class="text-sm font-semibold text-danger-400">
            {{ title|default('Error') }}
          </h3>
          <div class="mt-1 text-sm text-danger-300">
            <pre class="whitespace-pre-wrap font-mono text-xs">{{ error }}</pre>
          </div>
        </div>

        {# Dismiss Button #}
        {% if dismissible|default(true) %}
          <div class="flex-shrink-0 ml-4">
            <button
              type="button"
              class="inline-flex text-danger-400 hover:text-danger-300 focus:outline-none focus:ring-2 focus:ring-danger-500 rounded-lg p-1.5 transition-colors"
              onclick="this.closest('.alert-danger').remove()"
              aria-label="Dismiss"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>
