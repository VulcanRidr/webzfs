{% extends "layout_main.jinja" %}

{% block content %}
<div class="container mx-auto px-4 py-6">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit NTP Configuration</h1>
        <p class="text-gray-600 dark:text-gray-400 mt-2">Configuration file: {{ config_path }}</p>
    </div>

    <!-- Display Messages -->
    {% if request.query_params.get('message') %}
    <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded">
        {{ request.query_params.get('message') }}
    </div>
    {% endif %}
    
    {% if request.query_params.get('error') %}
    <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
        {{ request.query_params.get('error') }}
    </div>
    {% endif %}

    <!-- Configuration Editor Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <form method="POST" action="/utils/ntp/config/save">
            <div class="mb-4">
                <label for="config" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                    Configuration Content
                </label>
                <textarea 
                    name="config" 
                    id="config" 
                    rows="20"
                    class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 bg-white dark:bg-gray-700 text-gray-900 dark:text-white font-mono text-sm"
                    required>{{ config }}</textarea>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                    Edit the NTP configuration file. Be careful as incorrect syntax may prevent the service from starting.
                </p>
            </div>
            
            <div class="flex gap-4">
                <button type="submit" 
                        class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                        onclick="return confirm('Save NTP configuration? The service will need to be restarted for changes to take effect.');">
                    Save Configuration
                </button>
                
                <a href="/utils/ntp" 
                   class="px-4 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                    Cancel
                </a>
            </div>
        </form>
    </div>

    <!-- Help Card -->
    <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-6 mt-6">
        <h3 class="text-lg font-bold text-blue-900 dark:text-blue-300 mb-2">
            Configuration Help
        </h3>
        <p class="text-blue-800 dark:text-blue-400 mb-2">
            Common NTP configuration directives:
        </p>
        <ul class="list-disc list-inside text-blue-800 dark:text-blue-400 space-y-1">
            <li><code>server [address]</code> - Add an NTP server</li>
            <li><code>pool [address]</code> - Add a pool of NTP servers</li>
            <li><code>driftfile [path]</code> - Specify drift file location</li>
            <li><code>restrict [options]</code> - Set access restrictions</li>
        </ul>
        <p class="text-blue-800 dark:text-blue-400 mt-2">
            Remember to restart the NTP service after making changes.
        </p>
    </div>
</div>
{% endblock %}
