<h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Service Status</h2>

<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Service Status -->
    <div>
        <div class="flex items-center mb-2">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Service:</span>
            <span class="ml-2 text-sm text-gray-900 dark:text-white">{{ status.service_name }}</span>
        </div>
        <div class="flex items-center mb-2">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Status:</span>
            {% if status.running %}
            <span class="ml-2 px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 dark:bg-green-800 dark:text-green-100">
                Running
            </span>
            {% else %}
            <span class="ml-2 px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 dark:bg-red-800 dark:text-red-100">
                Stopped
            </span>
            {% endif %}
        </div>
        <div class="flex items-center">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">OS:</span>
            <span class="ml-2 text-sm text-gray-900 dark:text-white">{{ status.os_type }}</span>
        </div>
    </div>
    
    <!-- Time Information -->
    <div>
        <div class="mb-2">
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">System Time:</span>
            <p class="text-sm text-gray-900 dark:text-white mt-1">{{ time_info.system_time }}</p>
        </div>
    </div>
</div>

<!-- Sync Status Details -->
<div class="mt-4">
    <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Sync Status:</h3>
    <pre class="bg-gray-100 dark:bg-gray-900 rounded p-3 text-xs text-gray-800 dark:text-gray-200 overflow-x-auto">{{ time_info.sync_status }}</pre>
</div>
